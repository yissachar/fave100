<?xml version="1.0" encoding="UTF-8"?>

<cronentries>
  <cron>
    <url>/cron/sessioncleanup?clear</url>
    <description>Clean up sessions</description>
    <schedule>every 15 minutes</schedule>
  </cron>  
  
  <cron>
  	<url>/cron/pwdcleanup</url>
  	<description>Clean up expired password tokens</description>
  	<schedule>every day 00:00</schedule>
  </cron>
  
  <cron>
  	<url>/cron/hashtags</url>
  	<description>Build hashtag master lists</description>
  	<schedule>every 20 minutes</schedule>
  </cron>
</cronentries>