<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">

<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
	xmlns:g='urn:import:com.google.gwt.user.client.ui'
	xmlns:pf='urn:import:com.fave100.client.pagefragments.footer'
	ui:generateFormat='com.google.gwt.i18n.rebind.format.PropertiesFormat'
	ui:generateKeys='com.google.gwt.i18n.rebind.keygen.MD5KeyGenerator'
	ui:generateLocales='default'>

	<g:HTMLPanel>
		<g:HTMLPanel ui:styleName="container">
		<div class="content">
		    <g:FormPanel ui:field="passwordResetForm">
			<g:VerticalPanel styleName="nativeLoginBox">
				<g:Label>Username</g:Label>
				<g:TextBox ui:field="usernameInput"/>
				<g:Label>Email</g:Label>
				<g:TextBox ui:field="emailInput"/>
				<g:Label styleName="error" ui:field="statusMessage"/>
				<g:SubmitButton ui:field="sendButton">Send</g:SubmitButton>
			</g:VerticalPanel>
		</g:FormPanel>
		</div>
		<pf:Footer/>
	</g:HTMLPanel>
	</g:HTMLPanel>
</ui:UiBinder>
