<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">

<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
	xmlns:g='urn:import:com.google.gwt.user.client.ui'
	xmlns:pf='urn:import:com.fave100.client.pagefragments.footer'
	ui:generateFormat='com.google.gwt.i18n.rebind.format.PropertiesFormat'
	ui:generateKeys='com.google.gwt.i18n.rebind.keygen.MD5KeyGenerator'
	ui:generateLocales='default'>

	<ui:style>
		.pageTitle {
			margin: 20px auto;
			text-align: center;
		}
		.passwordResetForm {
			width: 300px;
			margin: 20px auto;
		}
	</ui:style>
	<g:HTMLPanel>
		<g:HTMLPanel ui:field="topBar"/>
		<div class="content">
			<h2 class="{style.pageTitle}">Reset Password</h2>
			<g:FormPanel ui:field="passwordResetForm" ui:styleName="{style.passwordResetForm} standardForm">
				<g:VerticalPanel styleName="nativeLoginBox">
					<g:Label>Username</g:Label>
					<g:TextBox ui:field="usernameInput"/>
					<g:Label>Email</g:Label>
					<g:TextBox ui:field="emailInput"/>
					<g:Label styleName="error" ui:field="statusMessage"/>
					<g:SubmitButton ui:field="sendButton">Send</g:SubmitButton>
				</g:VerticalPanel>
			</g:FormPanel>
		</div>
		<pf:Footer/>
	</g:HTMLPanel>
</ui:UiBinder>
