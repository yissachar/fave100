<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
		.item {
			background-color: #FFF;
			border: 1px solid #AAA;
			padding: 4px;
			margin: 0 auto;
		}
		
		.userProfile {
			max-width: 20%;
			padding: 2px;
			margin-right: 10px;
		}
		
		.userProfile img {
			max-width: 80px;
			max-height: 80px;
		}
		
		.song {
			font-size: 25px;
			font-weight: bold;			
		}
		
		.song a {
			color: #5eaae5;
		}
		
		.artist {
			font-size: 20px;
		}
		
		.whyLine {
			font-weight: 11px;
			font-style: italic;
			font-color: #eee;
		}
		
	</ui:style>
	<g:HorizontalPanel ui:styleName="{style.item} row span_6">
			<g:VerticalPanel ui:styleName="{style.userProfile}">
				<g:Image ui:field="avatar"/>
				<g:Hyperlink ui:field="username"/>
			</g:VerticalPanel>
			<g:VerticalPanel>		
				<g:Hyperlink ui:field="song" ui:styleName="{style.song}"/>
				<g:Label ui:field="artist" ui:styleName="{style.artist}"/>
				<g:Label ui:field="whyline" ui:styleName="{style.whyLine}"/>
			</g:VerticalPanel>
	</g:HorizontalPanel>
</ui:UiBinder> 