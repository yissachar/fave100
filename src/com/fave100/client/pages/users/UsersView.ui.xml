<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">

<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
	xmlns:g='urn:import:com.google.gwt.user.client.ui'
	xmlns:w="urn:import:com.fave100.client.widgets"
	ui:generateFormat='com.google.gwt.i18n.rebind.format.PropertiesFormat'
	ui:generateKeys='com.google.gwt.i18n.rebind.keygen.MD5KeyGenerator'
	ui:generateLocales='default'>

	<ui:style>
		@external .faveList;		
		.faveList{}	
		
		.userProfile{
			display: block;
			margin: 30px auto;
			border: 2px solid #444;
			background-color: #FFF;
			padding: 5px;
			font-size: 1.6em;
		}			
		
		.followButton {
			font-size: 1em;
			float: right;
			margin-top: 25px;
			margin-right: 20px;
		}
		.followButton:hover {	
			background-color: #A8EB88;
		}
		
		.username {
			margin: 15px;
			font-size: 2.8em;
			vertical-align: top;
		}
		
		.tabList {
			padding: 0;
		}
		.tabList li{
			display: inline;
			list-style-type: none;			
			margin-right: 10px;		
			cursor: pointer;	
		}		
		.tabList a{
			padding: 6px;
		}
		
		.activityTab ul{
			padding: 0;
			list-style-type: none;
			margin-top: 30px;
		}
		.activityTab li{
			border: 1px solid #999;
			background-color: #DDD;
			margin-top: 1px;
			padding: 6px;
		}
	</ui:style>
	<g:HTMLPanel>
		<g:HTMLPanel ui:field="topBar"/>
		<div class="container">
			<g:HTMLPanel ui:field="userProfile" styleName="{style.userProfile}">
				<g:Image ui:field="avatar"/>
				<span class="{style.username}" ui:field="username"/>
				<g:Button ui:field="followButton" styleName="{style.followButton}">Follow</g:Button>				
			</g:HTMLPanel>
			<ul class="{style.tabList}">
				<li><g:Anchor ui:field="fave100TabLink">Fave100</g:Anchor></li>
				<li><g:Anchor ui:field="activityTabLink">Activity</g:Anchor></li>
			</ul>			
			<w:NonpersonalFaveList ui:field="userFaveList" styleName="{style.faveList}"/>			
			<g:InlineHTML ui:field="activityTab" styleName="{style.activityTab}"/>
		</div>
	</g:HTMLPanel>
</ui:UiBinder>
