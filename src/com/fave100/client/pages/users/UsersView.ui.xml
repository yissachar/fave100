<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">

<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
	xmlns:g='urn:import:com.google.gwt.user.client.ui'
	xmlns:w="urn:import:com.fave100.client.widgets.favelist"
	xmlns:pf='urn:import:com.fave100.client.pagefragments.footer'
	ui:generateFormat='com.google.gwt.i18n.rebind.format.PropertiesFormat'
	ui:generateKeys='com.google.gwt.i18n.rebind.keygen.MD5KeyGenerator'
	ui:generateLocales='default'>

	<ui:style>
		.sideContainer {
			float: left;
		}
		
		.userProfile{
			display: block;
			width: 100%;			
			overflow: hidden;
			border: 1px solid #555;			
			background-color: #5eaae5;
			padding: 5px;
			color: #FFF;
		}		
		
		.avatar {
			float: left;
			margin-right: 10px;
		}
		
		.nameContainer {
			float: left;
		}
		
		.socialContainer {
			display: inline-block;
			width: 100%;
			font-size: 0.9em;			
			margin: 15px 0;
		}
		
		.socialContainer button {
			width: 100%;
			margin-bottom: 5px;
		}
				
		.followButton {
			font-size: 1em;
			float: right;
			margin-top: 25px;
			margin-right: 20px;
		}
		
		.username {
			font-size: 2.3em;
			vertical-align: top;
		}
		
		.dndLabel {
			font-size: 0.8em;
		}
		
		.faveListArea {
			float: right;
		}
		
		.songSearchContainer {
			margin-bottom: 20px;
		}
	</ui:style>
	
	<ui:with type="com.fave100.client.place.NameTokens" field="nameTokens"/>
	<g:HTMLPanel>
		<g:HTMLPanel ui:field="topBar"/>
		<div class="container">
			<div class="content row">
				<g:HTMLPanel styleName="{style.sideContainer} col span_3">		
					<g:HTMLPanel ui:field="userProfile" styleName="{style.userProfile}">
						<g:Image styleName="{style.avatar}" ui:field="avatar"/>
						<div class="{style.nameContainer}">
							<span class="{style.username}" ui:field="username"/>
							<br/>
							<span class="{style.dndLabel}">Drag and drop to rank</span>
						</div>							
						<g:InlineHyperlink targetHistoryToken="{nameTokens.getProfile}" ui:field="editProfileButton" styleName="{style.followButton}">
							Edit Profile
						</g:InlineHyperlink>
					</g:HTMLPanel>
					
					<g:HTMLPanel ui:field="socialContainer" styleName="{style.socialContainer}">
						<g:Button ui:field="twitterButton">
							Share list on Twitter
						</g:Button>
						<br/>
						<div class="fb-like" data-width="150"></div>					
					</g:HTMLPanel>
				</g:HTMLPanel>
				
				<g:HTMLPanel ui:styleName="{style.faveListArea} col span_9">
					<g:HTMLPanel ui:field="songSearchContainer" ui:styleName="{style.songSearchContainer}">					
						<g:SuggestBox ui:field="songSuggestBox"/>								
					</g:HTMLPanel>
					<g:HTMLPanel ui:field="faveListContainer" styleName="faveListContainer">				
						<w:PersonalFaveList ui:field="personalFaveList"/>
						<w:NonpersonalFaveList ui:field="userFaveList"/>								
					</g:HTMLPanel>						
				</g:HTMLPanel>
				
			</div>
		</div>
		<pf:Footer/>
	</g:HTMLPanel>
</ui:UiBinder>
