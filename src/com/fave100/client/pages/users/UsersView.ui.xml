<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">

<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
	xmlns:g='urn:import:com.google.gwt.user.client.ui'
	xmlns:w="urn:import:com.fave100.client.widgets.favelist"
	xmlns:pf='urn:import:com.fave100.client.pagefragments.footer'
	ui:generateFormat='com.google.gwt.i18n.rebind.format.PropertiesFormat'
	ui:generateKeys='com.google.gwt.i18n.rebind.keygen.MD5KeyGenerator'
	ui:generateLocales='default'>

	<ui:style>		
		.userProfile{
			display: block;
			margin-top: 30px;
			width: 688px;
			height: 80px;
			border: 1px solid #555;			
			background-color: #5eaae5;
			padding: 5px;
			color: #FFF;
		}		
		
		.avatar {
			float: left;
		}
		
		.nameContainer {
			float: left;
			margin-left: 10px;
		}
		
		.socialContainer {
			float: left;
			margin-left: 50px;
			font-size: 0.9em;
		}
		
		.socialContainer button {
			width: 100%;
			margin-bottom: 5px;
		}
				
		.followButton {
			font-size: 1em;
			float: right;
			margin-top: 25px;
			margin-right: 20px;
		}
		
		.username {
			margin: 15px;
			font-size: 2.3em;
			vertical-align: top;
		}
		
		.advancedSearchLink, .dndLabel {
			font-size: 0.8em;
		}
	</ui:style>
	
	<ui:with type="com.fave100.client.place.NameTokens" field="nameTokens"/>
	<g:HTMLPanel ui:styleName="container">
		<g:HTMLPanel ui:field="topBar"/>
		<div class="content">
		
			<g:HTMLPanel ui:field="userProfile" styleName="{style.userProfile}">
				<g:Image styleName="{style.avatar}" ui:field="avatar"/>
				<div class="{style.nameContainer}">
					<span class="{style.username}" ui:field="username"/>
					<br/>
					<span class="{style.dndLabel}">Drag and drop to rank</span>
				</div>
				<g:HTMLPanel ui:field="socialContainer" styleName="{style.socialContainer}">
					<g:Button ui:field="twitterButton">
						Share list on Twitter
					</g:Button>
					<br/>
					<div class="fb-like" data-width="150"></div>					
				</g:HTMLPanel>
				<!-- <div class="{style.influenceContainer}">
					<span>Following:</span>
					<br/>
					<span>Followers:</span>
				</div>
				
				<g:Button ui:field="followButton" styleName="{style.followButton}">Follow</g:Button>
				 -->			
				<g:InlineHyperlink targetHistoryToken="{nameTokens.getProfile}" ui:field="editProfileButton" styleName="{style.followButton}">
					Edit Profile
				</g:InlineHyperlink>
			</g:HTMLPanel>
			
			<!-- <g:HTMLPanel ui:field="faveFeed"/> -->
			<g:HTMLPanel ui:field="faveListContainer" styleName="faveListContainer">				
				<w:PersonalFaveList ui:field="personalFaveList"/>
				<w:NonpersonalFaveList ui:field="userFaveList"/>								
			</g:HTMLPanel>						
			
		</div>
		<pf:Footer/>
	</g:HTMLPanel>
</ui:UiBinder>
