<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">

<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
	xmlns:g='urn:import:com.google.gwt.user.client.ui'
	xmlns:w="urn:import:com.fave100.client.widgets"
	xmlns:pf='urn:import:com.fave100.client.pagefragments.footer'
	ui:generateFormat='com.google.gwt.i18n.rebind.format.PropertiesFormat'
	ui:generateKeys='com.google.gwt.i18n.rebind.keygen.MD5KeyGenerator'
	ui:generateLocales='default'>

	<ui:style>		
		.userProfile{
			display: block;
			margin: 30px 0;
			width: 685px;
			border: 2px solid #444;
			background-color: #FFF;
			padding: 5px;
			font-size: 1.6em;
		}			
		
		.followButton {
			font-size: 1em;
			float: right;
			margin-top: 25px;
			margin-right: 20px;
		}
		
		.username {
			margin: 15px;
			font-size: 2.8em;
			vertical-align: top;
		}
		
		.tabList {
			padding: 0;
		}
		.tabList li{
			display: inline;
			list-style-type: none;			
			margin-right: 10px;		
			cursor: pointer;	
		}		
		.tabList a{
			padding: 6px;
		}
		
		.activityTab ul{
			padding: 0;
			list-style-type: none;
			margin-top: 30px;
		}
		.activityTab li{
			width: 685px;
			border: 1px solid #999;
			background-color: #EFEFEF;
			margin-top: 1px;
			padding: 6px;
		}
		
		.advancedSearchLink, .dndLabel {
			font-size: 0.8em;
		}
	</ui:style>
	
	<ui:with type="com.fave100.client.place.NameTokens" field="nameTokens"/>
	<g:HTMLPanel ui:styleName="container">
		<g:HTMLPanel ui:field="topBar"/>
		<div class="content">
		
			<g:HTMLPanel ui:field="userProfile" styleName="{style.userProfile}">
				<g:Image ui:field="avatar"/>
				<span class="{style.username}" ui:field="username"/>
				<g:Button ui:field="followButton" styleName="{style.followButton}">Follow</g:Button>			
				<g:InlineHyperlink targetHistoryToken="{nameTokens.getProfile}" ui:field="editProfileButton" styleName="{style.followButton}">
					Edit Profile
				</g:InlineHyperlink>
			</g:HTMLPanel>
			
			<ul class="{style.tabList}">
				<li><g:Anchor ui:field="fave100TabLink">Fave100</g:Anchor></li>
				<li><g:Anchor ui:field="activityTabLink">Activity</g:Anchor></li>
			</ul>
			
			<g:HTMLPanel ui:field="faveFeed"/>
			<g:HTMLPanel ui:field="faveListContainer" styleName="faveListContainer">
				<g:HTMLPanel ui:field="songSearchContainer" styleName="itemHeader">
					<span class="{style.dndLabel}">Drag and drop to rank</span>
					<g:SuggestBox ui:field="songSuggestBox"/>
					<g:InlineHyperlink ui:field="advancedSearchLink" targetHistoryToken="{nameTokens.getSearch}" styleName="{style.advancedSearchLink}">
						Advanced search
					</g:InlineHyperlink>		
				</g:HTMLPanel>				
				<w:PersonalFaveList ui:field="personalFaveList"/>
				<w:NonpersonalFaveList ui:field="userFaveList"/>								
			</g:HTMLPanel>						
			<g:InlineHTML ui:field="activityTab" styleName="{style.activityTab}"/>
			
		</div>
		<pf:Footer/>
	</g:HTMLPanel>
</ui:UiBinder>
