<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">

<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
	xmlns:g='urn:import:com.google.gwt.user.client.ui'
	xmlns:pf='urn:import:com.fave100.client.pagefragments.footer'
	xmlns:uw='urn:import:com.fave100.client.pages.users.widgets.sharebutton'
	ui:generateFormat='com.google.gwt.i18n.rebind.format.PropertiesFormat'
	ui:generateKeys='com.google.gwt.i18n.rebind.keygen.MD5KeyGenerator'
	ui:generateLocales='default'>

	<ui:style type="com.fave100.client.pages.users.UsersView.UsersStyle">		
		.userProfile{
			display: block;
			width: 100%;			
			overflow: hidden;
			border: 1px solid #999;			
			background-color: #fff;
			padding: 5px;
			color: #5eaae5;
		}
		
		.avatar {
			float: left;
			margin-right: 10px;
			width: 80px;
			height: 80px;
		}
		
		.socialContainer {
			display: inline-block;
			width: 100%;
			font-size: 0.9em;			
			margin: 15px 0;
		}
		
		.socialContainer button {
			width: 100%;			
		}
		
		.username {	
			color: #5eaae5;
			display: block;
			width: 140px;
			font-size: 1.5em;
			vertical-align: top;
			word-wrap: break-word;
			font-weight: bold;
		}
		
		.followCTAcontainer {
			margin-top: 20px;			
		}
		
		.followButton {
			width: 65%;
			display: block;
			margin: 0 auto;
			text-align: center;
		}
				
		.songSearchContainer {			
			display: block;
			margin: 0 auto;
			margin-bottom: 20px;
			width: 80%;
			overflow: hidden;
		}
		
		.fixedSearch {
			position: fixed;
			width: 608px;
			margin-top: -26px;
			box-shadow: 0 0 8px #666;
		}
		
		.faveListContainer {
			min-height: 500px;
		}
	</ui:style>
	
	<ui:with type="com.fave100.client.resources.img.ImageResources" field="img"/>
	<ui:with type="com.fave100.client.place.NameTokens" field="nameTokens"/>
	
	<g:HTMLPanel styleName="wrap">
		<g:HTMLPanel ui:field="topBar"/>
		<div class="container">
			<div class="content row">
				<g:HTMLPanel ui:field="userContainer">
					<g:HTMLPanel styleName="userPageSideBar col span_3">		
						<g:HorizontalPanel ui:field="userProfile" styleName="{style.userProfile}">
							<g:Image styleName="{style.avatar}" ui:field="avatar"/>
							<g:VerticalPanel>
								<g:InlineLabel ui:styleName="{style.username}" ui:field="username"/>
								<g:InlineHyperlink targetHistoryToken="{nameTokens.getProfile}"  ui:styleName="{style.username}"  ui:field="profileLink"/>
								<!--  Follow button -->
								<g:FocusPanel ui:field="followCTAcontainer" ui:styleName="{style.followCTAcontainer}">									
									<g:InlineLabel ui:field="followCTA" ui:styleName="button {style.followButton}"/>
								</g:FocusPanel>
							</g:VerticalPanel>				
						</g:HorizontalPanel>
						
						<g:HTMLPanel ui:field="socialContainer" styleName="{style.socialContainer}">															
							<uw:ShareButton ui:field="shareButton"/>							
						</g:HTMLPanel>
						
						
						
						<!--  Users following -->
						<g:HTMLPanel ui:field="followingContainer"/>
						
					</g:HTMLPanel>
					
					<g:HTMLPanel ui:styleName="userPageFaveList col span_9">		
						<g:HTMLPanel ui:field="songAutocomplete" ui:styleName="{style.songSearchContainer}"/>	
						<g:HTMLPanel ui:field="faveListContainer" styleName="{style.faveListContainer}">
							<g:HTMLPanel ui:field="favelist"/>									
						</g:HTMLPanel>						
					</g:HTMLPanel>
				</g:HTMLPanel>
				<g:Label ui:field="userNotFound">That user does not exist.</g:Label>
			</div>
		</div>
		<pf:Footer/>
	</g:HTMLPanel>
</ui:UiBinder>
