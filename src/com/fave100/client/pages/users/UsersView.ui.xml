<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">

<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
	xmlns:g='urn:import:com.google.gwt.user.client.ui'
	xmlns:w="urn:import:com.fave100.client.widgets"
	ui:generateFormat='com.google.gwt.i18n.rebind.format.PropertiesFormat'
	ui:generateKeys='com.google.gwt.i18n.rebind.keygen.MD5KeyGenerator'
	ui:generateLocales='default'>

	<ui:style>
		@external .faveList;		
		.faveList{}	
		
		.userList ul{
			list-style: none;	
			margin-top: 20px;		
		}
		.userList li{
			float: left;
			cursor: pointer;
			background-color: #EEE;
			border: 2px solid #777;
			width: 250px;
			height: 80px;
			margin: 20px;
		}
		.userList li:hover{
			background-color: #FFF;
			border-color: #000;
		}
		.userList li img{
			float: left;
		}
		.userList a{
			display: block;
			width: 100%;
			height: 100%;			
			text-decoration: none;
		}
		.userList a div{			
			font-size: 1.5em;
			margin: 5px;
			float: left;
		}
		
		.userProfile{
			display: block;
			margin: 30px auto;
			border: 2px solid #444;
			background-color: #FFF;
			padding: 5px;
			font-size: 1.6em;
		}		
		
		.followButton {
			font-size: 1em;
			float: right;
			margin-top: 25px;
			margin-right: 20px;
		}
		.followButton:hover {	
			background-color: #A8EB88;
		}
		
		.username {
			margin: 15px;
			font-size: 2.8em;
			vertical-align: top;
		}
		
		.tabList li{
			display: inline;
			list-style-type: none;
			padding: 6px;
			margin-right: 10px;			
		}
	</ui:style>
	<g:HTMLPanel>
		<g:HTMLPanel ui:field="topBar"/>
		<div class="container">			
			<g:InlineHTML ui:field="usersList" styleName="{style.userList}"/>
			<g:HTMLPanel ui:field="userProfile" styleName="{style.userProfile}">
				<g:Image ui:field="avatar"/>
				<span class="{style.username}" ui:field="username"/>
				<g:Button ui:field="followButton" styleName="{style.followButton}">Follow</g:Button>				
			</g:HTMLPanel>
			<ul class="{style.tabList}">
				<li class="selected"><g:Anchor>Fave100</g:Anchor></li>
				<li><g:Anchor>Activity</g:Anchor></li>
			</ul>			
			<w:FaveDataGrid ui:field="userFaveDataGrid" styleName="{style.faveList}"/>
		</div>
	</g:HTMLPanel>
</ui:UiBinder>
