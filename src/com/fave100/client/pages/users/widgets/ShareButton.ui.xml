<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	
	<ui:style>
		.shareCTA {
			text-align: center;
		}
		
		.socialDropdown {
			background-color: #FFF;
			border: 1px solid #999;
			border-top: 0px;
			height: 65px;
		}
		
		.linkContainer > * {
			float: left;
		}
		
		.twitterShare {
			cursor: pointer;
		}
		
		.fbLike { 
			margin-top: 2px;
		}
	</ui:style>
	
	
	<g:FocusPanel ui:field="shareArea">
		<g:HTMLPanel ui:field="shareContainer">
			<a ui:field="twitterShare" href="https://twitter.com/share" class="twitter-share-button" data-lang="en" data-size="medium" data-count="horizontal">Tweet</a>
			<br/>
			<div ui:field="fbLike" class="fb-like {style.fbLike}" data-send="false" data-layout="button_count" data-width="150" data-show-faces="false"></div>
			<g:HTMLPanel ui:field="gplusPlaceholder"/>
			<div ui:styleName="{style.linkContainer}">	
				<g:Label>Link:</g:Label>
				<g:TextBox ui:field="shareLink"/>
			</div>
		</g:HTMLPanel>
	</g:FocusPanel>
</ui:UiBinder> 