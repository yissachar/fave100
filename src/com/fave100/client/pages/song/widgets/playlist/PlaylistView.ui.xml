<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">

<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
	xmlns:g='urn:import:com.google.gwt.user.client.ui'
	ui:generateFormat='com.google.gwt.i18n.rebind.format.PropertiesFormat'
	ui:generateKeys='com.google.gwt.i18n.rebind.keygen.MD5KeyGenerator'
	ui:generateLocales='default'>

	<ui:style>
		.playlistHeader {
			background-color: #FFF;
			border-bottom: 1px solid #ccc;
		}
		
		.userInfo {
			padding: 5px 0;			
			overflow: hidden;
		}
		
		.username, .hashtag {
			float: left;
			font-size: 1.3em;
			font-weight: bold;			
		}
		
		.hashtag {
			margin-left: 20px;
		}
		
		.avatar {
			float: left;
			width: 40px;
			height: 40px;		
			margin: 0 5px;	
		}	
		
		.playlist {
			clear: both;
			/* This is just an inital height, will be recalculated at runtime */
			height: 420px;
			overflow-y: auto;
		}
	</ui:style>
	
	<g:HTMLPanel>
		<g:FlowPanel ui:field="playlistHeader" ui:styleName="{style.playlistHeader}">
			<g:FlowPanel ui:styleName="{style.userInfo}">
				<g:Image ui:field="_avatar" ui:styleName="{style.avatar}"/>
				<g:Anchor ui:field="_username" ui:styleName="{style.username}"/>
				<g:Anchor ui:field="_hashtag" ui:styleName="{style.hashtag}"/>			
			</g:FlowPanel>
		</g:FlowPanel>
		<g:FlowPanel ui:field="playlistContainer" ui:styleName="{style.playlist}"/>
	</g:HTMLPanel>
	
</ui:UiBinder>
