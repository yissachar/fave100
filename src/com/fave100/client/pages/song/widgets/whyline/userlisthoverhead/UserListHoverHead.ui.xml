<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	
	<ui:style>
		.container {
			position: relative;
			display: inline;
		}
		
		.details{
		    background-color: #f8f8f8;
		    border: 1px solid #aaa;
		    border-radius: 3px;
		    height: 50px;
		    width: 160px;
		    box-shadow: 0 0 4px #999;
		    margin: 0 auto;
		    position: absolute;
		    text-align: center;
		    top: -62px;
		    left: -65px;
		    display: none;
		    padding: 0 20px;
			z-index: 10000;		
		}
		
		.details:after{
		    content: '';
		    position: absolute;
		    bottom: -6px;
		    width: 10px;
		    height: 10px;
		    border-bottom: 1px solid #aaa;
		    border-right: 1px solid #aaa;
		    background-color: #f8f8f8;
		    left: 50%;
		    margin-left: -5px;
		    -moz-transform: rotate(45deg);
		    -webkit-transform: rotate(45deg);
		    transform: rotate(45deg);
		}
		
		.container:hover .details{
		    display: block;
		}
	</ui:style>
	
	<g:HTMLPanel >
		<g:HTMLPanel ui:styleName="{style.container}">
			<g:Image ui:field="avatarImage"/>		
			<g:FlowPanel ui:field="details" ui:styleName="{style.details}">		
				<g:Label ui:field="userNameLabel"/>
				<g:Hyperlink ui:field="listNameLink"/>
			</g:FlowPanel>
		</g:HTMLPanel>
	</g:HTMLPanel>
</ui:UiBinder> 