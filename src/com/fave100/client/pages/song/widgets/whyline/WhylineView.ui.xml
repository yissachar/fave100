<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'>
             
    <ui:style>
    	.tab {
			float: left;
    	}
    	
    	.tabTitle {
			font-weight: bold;
			margin-bottom: 5px;
		}
    	
    	.whylines {
			width: 60%;
    	}
    	
    	.userLists {
			margin-left: 4%;
			width: 36%;
		}
		
		.userListsPanel > div {
			display: inline;
		}
    </ui:style>
    
    <g:FlowPanel>
    
    	<g:FlowPanel ui:styleName="{style.whylines} {style.tab}">
    		<g:Label ui:styleName="{style.tabTitle}">Whylines</g:Label>
    		<g:FlowPanel ui:field="whylinePanel"></g:FlowPanel>
    	</g:FlowPanel>
    
    	<g:FlowPanel ui:styleName="{style.userLists} {style.tab}">
    		<g:Label ui:styleName="{style.tabTitle}">In these lists</g:Label>    	
    		<g:FlowPanel ui:styleName="{style.userListsPanel}" ui:field="userListsPanel"></g:FlowPanel>	
    	</g:FlowPanel>
    		
    </g:FlowPanel>
</ui:UiBinder>
