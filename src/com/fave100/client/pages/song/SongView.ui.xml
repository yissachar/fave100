<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">

<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
	xmlns:g='urn:import:com.google.gwt.user.client.ui'
	xmlns:pf='urn:import:com.fave100.client.pagefragments.footer'
	xmlns:w='urn:import:com.fave100.client.widgets'
	xmlns:wyt='urn:import:com.fave100.client.widgets.youtube'
	ui:generateFormat='com.google.gwt.i18n.rebind.format.PropertiesFormat'
	ui:generateKeys='com.google.gwt.i18n.rebind.keygen.MD5KeyGenerator'
	ui:generateLocales='default'>

	<ui:style>	
		.songContainer {			
			width: 700px;
		}
		
		.songHeader {
			height: 40px;
		}
		
		.songDetails {
			float: left;
		}
		
		.songTitle {
			font-size: 1.3em;
		}
		
		.songBody {
			background-color: #FFF;
			border: 1px solid #555;
			padding: 20px;
		}
		
		.addToFave100Button {
			float: right;
		}
		
		.youtubeWidget {
			margin: 0 auto;
			width: 640px;
		}
		
		.whylineWaterfall {
			margin: 0 auto;
		}
	</ui:style>
	
	<g:HTMLPanel ui:styleName="container">
		<g:HTMLPanel ui:field="topBar"/>
		<div class="content">
			<div class="{style.songContainer}">
				<div class="itemHeader {style.songHeader}">
					<div class="{style.songDetails}">
						<g:Label ui:field="songTitle" styleName="{style.songTitle}"/>
						<g:Label ui:field="artistName"/>
					</div>
					<g:Button ui:field="addToFave100Button" styleName="{style.addToFave100Button}">+Fave100</g:Button>
				</div>
				<div class="{style.songBody}">
					<wyt:YouTubeWidget ui:field="youTubeWidget" styleName="{style.youtubeWidget}"/>
					<w:WhylineWaterfall ui:field="whylineWaterfall" styleName="{style.whylineWaterfall}"/>
				</div>
			</div>
		</div>	
		<pf:Footer/>
	</g:HTMLPanel>
</ui:UiBinder>
