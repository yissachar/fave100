<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">

<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
	xmlns:g='urn:import:com.google.gwt.user.client.ui'
	xmlns:pf='urn:import:com.fave100.client.pagefragments.footer'
	xmlns:w='urn:import:com.fave100.client.pages.song.widgets.whyline'
	xmlns:wp='urn:import:com.fave100.client.pages.song.widgets.playlist'
	xmlns:wyt='urn:import:com.fave100.client.pages.song.widgets.youtube'
	ui:generateFormat='com.google.gwt.i18n.rebind.format.PropertiesFormat'
	ui:generateKeys='com.google.gwt.i18n.rebind.keygen.MD5KeyGenerator'
	ui:generateLocales='default'>

	<ui:style type="com.fave100.client.pages.song.SongView.SongViewStyle">	
		.songContainer {	
			height: 577px;
		}
		
		.songHeader {
			overflow: hidden;
			border-bottom: 0px;
			border: 1px solid #AAA;
			border-bottom: 0px;
		}
		
		.songDetails {
			float: left;
			max-width: 85%;
		}
		
		.songTitle {
			font-size: 1.3em;
		}
		
		.songBody {
			background-color: #FFF;
			border: 1px solid #AAA;
			padding: 20px;
		}
		
		.addToFave100Button {
			float: right;
		}
		
		.youtubeWidget {
			margin: 0 auto;
		}
		
		.playlistVisible{}
		
		.sideBar {	
			border: 1px solid #AAA;
			border-left: 0px;
			margin-left: 0%;
		}
		
		.tabHeaderContainer > div {
			float: left;		
			width: 100%;	
			text-align: center;
			font-size: 1.1em;
			font-weight: bold;
			padding: 5px;			
			border-bottom: 1px solid #AAA;			
		}
		
		.playlistVisible > div {
			width: 50%;
		}
		
		.playlistVisible > div:hover {
			background-color: #FFF;
			cursor: pointer;
		}
		
		.playlistTabHeader {
			display: none;
		}
		
		.playlistVisible .playlistTabHeader {
			display: inline-block;
		}
		
		.tabContainer {			
			clear: both;
			overflow-y: auto;
			-webkit-overflow-scrolling: touch;		
			overflow-x: hidden;	
		}
		
	</ui:style>
	
	<g:HTMLPanel styleName="wrap">
		<g:HTMLPanel ui:field="topBar"/>
		<div class="container">
			<div class="content">
				<div class="{style.songContainer}">
					<div class="itemHeader {style.songHeader}">
						<div class="{style.songDetails}">
							<g:Label ui:field="songTitle" styleName="{style.songTitle}"/>
							<g:Label ui:field="artistName"/>
						</div>
						<g:Button ui:field="addToFave100Button" styleName="{style.addToFave100Button}">+Fave100</g:Button>
					</div>
					<div class="row">
						<div class="{style.songBody} col span_8">
							<g:HTMLPanel ui:field="youTubeWidget" styleName="{style.youtubeWidget}"/>						
						</div>
						<g:HTMLPanel ui:styleName="{style.sideBar} col songSidebar">
							<g:FlowPanel ui:styleName="{style.tabHeaderContainer}" ui:field="tabHeaderContainer">
								<g:Label ui:styleName="{style.playlistTabHeader}" ui:field="playlistTabHeader">Playlist</g:Label>
								<g:Label ui:field="whylineTabHeader">Why-Lines</g:Label>
							</g:FlowPanel>
							<g:FlowPanel ui:styleName="{style.tabContainer}">
								<g:HTMLPanel ui:field="playlistPane"/>
								<w:WhylineWaterfall ui:field="whylineWaterfall" />
							</g:FlowPanel>
						</g:HTMLPanel>	
					</div>									
				</div>				
			</div>	
		</div>
		<pf:Footer/>
	</g:HTMLPanel>
</ui:UiBinder>
