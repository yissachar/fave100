<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">

<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
	xmlns:g='urn:import:com.google.gwt.user.client.ui' xmlns:w="urn:import:com.fave100.client.widgets"
	xmlns:pf='urn:import:com.fave100.client.pagefragments.footer'
	ui:generateFormat='com.google.gwt.i18n.rebind.format.PropertiesFormat'
	ui:generateKeys='com.google.gwt.i18n.rebind.keygen.MD5KeyGenerator'
	ui:generateLocales='default'>

	<ui:style>		
		.topBackground {
			width: 100%;
			position: absolute;
			top: 0;
			background-color: #5eaae5;
			display: block;
			height: 320px;
		}
		
		.homePageContainer {
			margin: 0 auto;	
			margin-top: 77px;
		}
		
		.CTApanel {
			margin-top: 90px;
			width: 320px;
		}
		
		.logo {
			width: 182px;
			height: 65px;
			display: block;
			margin: 0 auto;
			margin-bottom: 30px;
		}
		
		.tagLine {
			font-size: 1.8em;
			color: #FFF;
			text-align: center;
		}
		
		.registerCTA {
			font-size: 1.8em;
			margin: 35px 0;
			text-align: center;
		}
		
		.buttonContainer {
			width: 100%;
		}
		
		.buttonContainer a, .buttonContainer button {
			width: 130px;
			display: inline-block;
			text-align: center;
			line-height: 18px;
		}
		
		.loginButton {
			float: right;
		}
	</ui:style>

	<ui:with type="com.fave100.client.place.NameTokens" field="nameTokens" />
	<g:HTMLPanel styleName="wrap">
		<div class="{style.topBackground}" />
		<div class="container">
			<div class="content">
				<g:HorizontalPanel styleName="{style.homePageContainer} row">					
					<g:VerticalPanel styleName="{style.CTApanel}">
						<g:Image styleName="{style.logo}" url="img/logo.png" />
						<g:Label styleName="{style.tagLine}">Get your list on.</g:Label>
						<g:Label styleName="{style.registerCTA}">What are your top songs of all-time?</g:Label>
						<g:HorizontalPanel styleName="{style.buttonContainer}">
							<g:Button ui:field="registerButton">Register</g:Button>
							<g:Button styleName="{style.loginButton}" ui:field="loginButton">Login</g:Button>
						</g:HorizontalPanel>
					</g:VerticalPanel>
				</g:HorizontalPanel>
			</div>			
		</div>
		<pf:Footer />
	</g:HTMLPanel>
</ui:UiBinder>
