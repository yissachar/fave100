<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">

<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
	xmlns:g='urn:import:com.google.gwt.user.client.ui'
	xmlns:w="urn:import:com.fave100.client.widgets.favelist"
	xmlns:pf='urn:import:com.fave100.client.pagefragments.footer'
	ui:generateFormat='com.google.gwt.i18n.rebind.format.PropertiesFormat'
	ui:generateKeys='com.google.gwt.i18n.rebind.keygen.MD5KeyGenerator'
	ui:generateLocales='default'>
	
	<ui:style>	
		.registerContainer{
			display: block;
			margin: 0px auto;
			width: 800px;
		}		

		.registerContainer h1 {
			text-align: center;
		}

		.registerContainer div{
			float: left;
		}

		.loginStatusMessage{
			display: block;
			font-size: 0.75em;
			margin-bottom: 5px;
		}

		#noAccountPrompt {
			clear: both;
			padding-top: 30px;
			text-align: center;
		}
	</ui:style>

	<ui:with type="com.fave100.client.place.NameTokens" field="nameTokens"/>
	<g:HTMLPanel ui:styleName="container">
		<g:HTMLPanel ui:field="topBar"/>		
		<div class="content">
			<g:HTMLPanel styleName="{style.registerContainer}">
				<h1>Start building your list</h1>
				<g:HTMLPanel ui:field="loginBox"/>				
			</g:HTMLPanel>
			<p id="noAccountPrompt">
			    <g:InlineHyperlink targetHistoryToken="{nameTokens.getRegister}"> Don't have an account? Register</g:InlineHyperlink>
			</p>
		    <!-- <g:HTMLPanel ui:field="faveFeed"/>
			<div class="faveListContainer">
				<h2 class="itemHeader">The Fave100</h2>
				<w:NonpersonalFaveList ui:field="masterFaveList"/>
			</div>
			 -->
		</div>	
		<pf:Footer/>
	</g:HTMLPanel>	
</ui:UiBinder>
