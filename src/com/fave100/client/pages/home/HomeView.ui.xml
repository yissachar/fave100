<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">

<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
	xmlns:g='urn:import:com.google.gwt.user.client.ui' xmlns:w="urn:import:com.fave100.client.widgets"
	xmlns:wf="urn:import:com.fave100.client.widgets.favelist" xmlns:pf='urn:import:com.fave100.client.pagefragments.footer'
	ui:generateFormat='com.google.gwt.i18n.rebind.format.PropertiesFormat'
	ui:generateKeys='com.google.gwt.i18n.rebind.keygen.MD5KeyGenerator'
	ui:generateLocales='default'>

	<ui:style>		
		.topBackground {
			width: 100%;
			position: absolute;
			top: 0;
			background-color: #5eaae5;
			display: block;
			height: 320px;
		}
		
		.homePageContainer {
			margin: 0 auto;	
			margin-top: 107px;
			width: 960px;
		}
		
		.userThumbListPanel {
			width: 500px;
		}
		
		.CTApanel {
			margin-top: 90px;
			width: 320px;
		}
		
		.logo {
			width: 182px;
			height: 65px;
		}
		
		.tagLine {
			font-size: 1.8em;
			color: #FFF;
		}
		
		.registerCTA {
			font-size: 1.8em;
			margin: 35px 0;
		}
		
		.buttonContainer a {
			width: 130px;
			margin-right: 10px;
			display: inline-block;
			text-align: center;
			line-height: 18px;
		}
	</ui:style>

	<ui:with type="com.fave100.client.place.NameTokens" field="nameTokens" />
	<g:HTMLPanel ui:styleName="pageWrap">
		<div class="{style.topBackground}" />
		<div class="content">
			<g:HorizontalPanel styleName="{style.homePageContainer}">
				<g:HTMLPanel styleName="{style.userThumbListPanel}"
					ui:field="userThumbListPanel" />
				<g:VerticalPanel styleName="{style.CTApanel}">
					<g:Image styleName="{style.logo}" url="img/Logo.png" />
					<g:Label styleName="{style.tagLine}">Get your list on.</g:Label>
					<g:Label styleName="{style.registerCTA}">What are your top songs of all-time?</g:Label>
					<g:HorizontalPanel styleName="{style.buttonContainer}">
						<g:InlineHyperlink styleName="button"
							targetHistoryToken="{nameTokens.getRegister}">Register</g:InlineHyperlink>
						<g:InlineHyperlink styleName="button"
							targetHistoryToken="{nameTokens.getLogin}">Login</g:InlineHyperlink>
					</g:HorizontalPanel>
				</g:VerticalPanel>
			</g:HorizontalPanel>
			<!-- <g:HTMLPanel ui:field="faveFeed"/> <div class="faveListContainer"> 
				<h2 class="itemHeader">The Fave100</h2> <wf:NonpersonalFaveList ui:field="masterFaveList"/> 
				</div> -->
		</div>
		<pf:Footer />
	</g:HTMLPanel>
</ui:UiBinder>
