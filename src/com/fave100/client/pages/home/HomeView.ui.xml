<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">

<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
	xmlns:g='urn:import:com.google.gwt.user.client.ui' 
	xmlns:pf='urn:import:com.fave100.client.pagefragments.footer'
	xmlns:w='urn:import:com.fave100.client.widgets'
	ui:generateFormat='com.google.gwt.i18n.rebind.format.PropertiesFormat'
	ui:generateKeys='com.google.gwt.i18n.rebind.keygen.MD5KeyGenerator'
	ui:generateLocales='default'>

	<ui:style src="../../../client/resources/css/global.css" type="com.fave100.client.resources.css.GlobalStyle">	
		.topBackground {
			width: 100%;
			position: absolute;
			top: 0;
			background-color: PRIMARY_COLOR;
			display: block;
			height: 225px;
		}
		
		.homeBody { 
			z-index: 1;
		}
		
		.homePageContainer {
			margin: 0 auto;	
			margin-top: 30px;
		}
		
		.CTApanel {
			margin-top: 63px;
		}
		
		.logo {			
			display: block;
			margin: 0 auto;
			margin-bottom: 20px;
		}
		
		.tagLine {
			font-size: 1.8em;
			color: #FFF;
			text-align: center;
		}
		
		.registerCTA {
			font-size: 1.8em;
			text-align: center;
			margin-top: 55px;
		}
		
		.buttonContainer {
			width: 320px;
			display: block; 
			margin: 0 auto 60px;
		}
		
		.buttonContainer button {
			width: 130px;
			display: inline-block;
			margin: 0 auto;
			display: block;
			text-align: center;
			line-height: 18px;
		}		
		
		.registerButton {
			float: left;
		}
		
		.loginButton {
			float: right;
		}
		
		.masterList {
			margin: 0 auto;
		}
	</ui:style>

	<ui:with type="com.fave100.client.place.NameTokens" field="nameTokens" />
	<ui:with field="img" type="com.fave100.client.resources.img.ImageResources" />
	
	<g:HTMLPanel styleName="wrap">
		<div class="{style.topBackground}" />
		<div class="container {style.homeBody}">
			<div class="content">
				<div class="{style.homePageContainer}">					
					<div class="{style.CTApanel}">
						<g:Image ui:field="logoImg" styleName="{style.logo} row" resource="{img.logoLarge}" />
						<g:Label styleName="{style.tagLine} row">Get your list on.</g:Label>
						<g:Label styleName="{style.registerCTA} row">What are your top songs of all-time?</g:Label>
						<div class="{style.buttonContainer} row">
							<g:Button ui:styleName="{style.registerButton}" ui:field="registerButton">Register</g:Button> 
							<g:Button ui:styleName="{style.loginButton}" ui:field="loginButton">Sign In</g:Button>
						</div>
					</div>
				</div>
			</div>			
		</div>
		<g:SimplePanel>
			<g:HTMLPanel ui:field="masterList" ui:styleName="{style.masterList}  span_8"/>
		</g:SimplePanel>
	</g:HTMLPanel>
</ui:UiBinder>
