<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">

<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
	xmlns:g='urn:import:com.google.gwt.user.client.ui' xmlns:w="urn:import:com.fave100.client.widgets"
	xmlns:pf='urn:import:com.fave100.client.pagefragments.footer'
	ui:generateFormat='com.google.gwt.i18n.rebind.format.PropertiesFormat'
	ui:generateKeys='com.google.gwt.i18n.rebind.keygen.MD5KeyGenerator'
	ui:generateLocales='default'>

	<ui:style>		
		.topBackground {
			width: 100%;
			position: absolute;
			top: 0;
			background-color: #5eaae5;
			display: block;
			height: 320px;
		}
		
		.homeBody { 
			z-index: 1;
			padding-bottom: 25em;
		}
		
		.homePageContainer {
			margin: 0 auto;	
			margin-top: 77px;
		}
		
		.CTApanel {
			margin-top: 120px;
		}
		
		.logo {
			width: 182px;
			height: 65px;
			display: block;
			margin: 0 auto;
		}
		
		.tagLine {
			font-size: 1.8em;
			color: #FFF;
			text-align: center;
		}
		
		.registerCTA {
			font-size: 1.8em;
			margin: 35px 0;
			text-align: center;
		}
		
		.buttonContainer {
			width: 100%;
		}
		
		.buttonContainer button {
			width: 130px;
			display: inline-block;
			text-align: center;
			line-height: 18px;
		}		
		
		.loginButton {
			margin: 0 12px;
		}
		
		.hideFooter {
			overflow: hidden;
		}
		
		.footerImage {	
			position: absolute;
			left: 50%;
			bottom: -200px;			
			display: block;
			margin: 0 auto;
			margin-left: -369px;
			overflow: hidden;
			z-index: 0;
			position: absolute;	
			bottom: 0;
		}
	</ui:style>

	<ui:with type="com.fave100.client.place.NameTokens" field="nameTokens" />
	<g:HTMLPanel styleName="wrap {style.hideFooter}">
		<div class="{style.topBackground}" />
		<div class="container {style.homeBody}">
			<div class="content">
				<g:HorizontalPanel styleName="{style.homePageContainer}">					
					<g:VerticalPanel styleName="{style.CTApanel}">
						<g:Image styleName="{style.logo} row" url="img/logo.png" />
						<g:Label styleName="{style.tagLine} row">Get your list on.</g:Label>
						<g:Label styleName="{style.registerCTA} row">What are your top songs of all-time?</g:Label>
						<g:HorizontalPanel styleName="{style.buttonContainer} row">
							<g:Button  ui:field="registerButton">Register</g:Button>
							<g:Button ui:styleName="{style.loginButton}" ui:field="loginButton">Login</g:Button>
							<g:Button  ui:field="exploreButton">Explore</g:Button>
						</g:HorizontalPanel>
					</g:VerticalPanel>
				</g:HorizontalPanel>
			</div>			
		</div>
		<g:Image url="img/home-page-tablet.png" ui:styleName="{style.footerImage} row"/>
	</g:HTMLPanel>
</ui:UiBinder>
