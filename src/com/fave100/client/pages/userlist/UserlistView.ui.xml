<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">

<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
	xmlns:g='urn:import:com.google.gwt.user.client.ui'
	xmlns:pf='urn:import:com.fave100.client.pagefragments.footer'
	ui:generateFormat='com.google.gwt.i18n.rebind.format.PropertiesFormat'
	ui:generateKeys='com.google.gwt.i18n.rebind.keygen.MD5KeyGenerator'
	ui:generateLocales='default'>
	
	<ui:style>
		.userList ul{
			list-style: none;	
			margin-top: 20px;		
		}
		.userList li{
			float: left;
			cursor: pointer;
			background-color: #FFF;
			border: 1px solid #777;
			width: 250px;
			height: 80px;
			margin: 20px;
		}
		.userList li:hover{
			background-color: #FFF;
			border-color: #000;
		}
		.userList li img{
			float: left;
			max-height: 80px;
		}
		.userList a{
			display: block;
			width: 100%;
			height: 100%;			
			text-decoration: none;
		}
		.userList a div{			
			font-size: 1.5em;
			margin: 5px;
			float: left;
		}
	</ui:style>

	<g:HTMLPanel ui:styleName="container">
		<g:HTMLPanel ui:field="topBar"/>
		<div class="content">
			<g:InlineHTML ui:field="usersList" styleName="{style.userList}"/>						
		</div>		
		<pf:Footer/>
	</g:HTMLPanel>	
</ui:UiBinder>
