<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">

<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
	xmlns:g='urn:import:com.google.gwt.user.client.ui'
	ui:generateFormat='com.google.gwt.i18n.rebind.format.PropertiesFormat'
	ui:generateKeys='com.google.gwt.i18n.rebind.keygen.MD5KeyGenerator'
	ui:generateLocales='default'>

	<ui:style type="com.fave100.client.pages.lists.widgets.globallistdetails.GlobalListDetailsView.Style">
		.mobile {
			padding: 10px;
		}
		
		.hashtagLabel {
			font-size: 56px;
			text-align: right;
			margin-left: -100%;
			text-overflow: ellipsis;
			overflow: hidden;
		}		
		
		.contributeCTA {
			float: right;
			cursor: pointer;
			margin-bottom: 10px;
		}
		
		.trendingHeader {
			margin: 15px 0;
			font-size: 1.1em;
		}
		
		.trendingList {
			line-height: 20px;
		}
				
		.trendingList a {
			color: #5eaae5;
			display: block;
			clear: both;
		}
		
		.mobile .trendingList a {
			display: inline-block;
			margin-right: 5px;
		}
	</ui:style>
	
	<g:FlowPanel ui:field="container">
		<g:Label ui:field="hashtagLabel" ui:styleName="{style.hashtagLabel}"/>
		<g:Anchor ui:field="contributeCTA" ui:styleName="{style.contributeCTA}">Contribute to this list</g:Anchor>
		<g:HTMLPanel ui:field="listAutocomplete"/>
		<g:Label ui:styleName="{style.trendingHeader}">Trending Lists</g:Label>
		<g:FlowPanel ui:field="trendingLists" ui:styleName="{style.trendingList}" />
	</g:FlowPanel>
</ui:UiBinder>
