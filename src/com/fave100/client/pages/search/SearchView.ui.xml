<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">

<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
	xmlns:g='urn:import:com.google.gwt.user.client.ui'
	xmlns:c='urn:import:com.google.gwt.user.cellview.client'
	xmlns:w='urn:import:com.fave100.client.widgets'
	xmlns:pf='urn:import:com.fave100.client.pagefragments.footer'
	ui:generateFormat='com.google.gwt.i18n.rebind.format.PropertiesFormat'
	ui:generateKeys='com.google.gwt.i18n.rebind.keygen.MD5KeyGenerator'
	ui:generateLocales='default'>
	
	<ui:style>			
		.searchForm {
			margin: 35px auto;
		}
		
		.searchBox {
			padding: 8px;
			height: 40px;
			width: 85%;
			color: #444;
			margin: -5px;
		}
		
		.searchButton {
			margin: 0px;
			height: 40px;
			border-radius: 0px;
			font-size: 0.8em;
			width: 15%;
		}
		
		.iTunesResults{
			padding: 0;
			margin-top: 30px;
		}
		.iTunesResults > div > div {
			background: #FFF;
			clear: both;
			height: 60px;
			padding: 10px;
			border: 1px solid #999;
		}
		.iTunesResults > div > div:hover{
			background: #EEE;
		}
		.iTunesResults img {
			float: left;
			padding-right: 10px;
		}
		
		.searchAttributesListBox{
			padding: 8px;
			color: #444;
		}
		
		.searchResults {
			margin: 15px auto;
		}
		
		.searchStatus{
			margin-top: 10px;
		}
		
	</ui:style>

	<g:HTMLPanel ui:styleName="pageWrap">
		<g:HTMLPanel ui:field="topBar"/>
		<div class="container">
			<div class="content">
				<div class="row">
					<g:FormPanel ui:field="searchForm" ui:styleName="{style.searchForm} span_6">									
						<g:HTMLPanel ui:styleName="">
							<g:TextBox ui:field="songSearchBox" ui:styleName="{style.searchBox}"/>
							<g:SubmitButton ui:field="searchButton" ui:styleName="{style.searchButton}">Search</g:SubmitButton>
						</g:HTMLPanel>					
					</g:FormPanel>
				</div>
				<div class="{style.searchResults} span_9">
					<g:Label ui:field="searchStatus" ui:styleName="{style.searchStatus} row"/>				
					<c:CellList ui:field="iTunesResults" ui:styleName="{style.iTunesResults}"/>
					<w:SimplePager ui:field="pager"/>
				</div>
			</div>
		</div>	
		<pf:Footer/>		
	</g:HTMLPanel>
</ui:UiBinder>
