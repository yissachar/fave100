<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">

<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
	xmlns:g='urn:import:com.google.gwt.user.client.ui'
	xmlns:c='urn:import:com.google.gwt.user.cellview.client'
	xmlns:pf='urn:import:com.fave100.client.pagefragments.footer'
	ui:generateFormat='com.google.gwt.i18n.rebind.format.PropertiesFormat'
	ui:generateKeys='com.google.gwt.i18n.rebind.keygen.MD5KeyGenerator'
	ui:generateLocales='default'>
	
	<ui:style>
		.searchBox {
			padding: 8px;
			height: 30px;
			width: 450px;
			font-size: 1.5em;
			color: #444;
			margin-bottom: 10px;
		}
		
		.searchButton {
			font-size: 1.3em;
			margin-top: 10px;
		}
		
		.iTunesResults{
			padding: 0;
			margin-top: 30px;
			width: 700px;
		}
		.iTunesResults > div > div {
			background: #FFF;
			clear: both;
			height: 60px;
			padding: 10px;
			border: 1px solid #999;
		}
		.iTunesResults > div > div:hover{
			background: #EEE;
		}
		.iTunesResults img {
			float: left;
			padding-right: 10px;
		}
		
		.searchAttributesListBox{
			padding: 8px;
			color: #444;
		}
		.searchStatus{
			margin-top: 10px;
		}
	</ui:style>

	<g:HTMLPanel ui:styleName="container">
		<g:HTMLPanel ui:field="topBar"/>
		<div class="content">
			 <g:FormPanel ui:field="searchForm">				
				<g:HTMLPanel>
					<g:Label>Song</g:Label>
					<g:TextBox ui:field="songSearchBox" ui:styleName="{style.searchBox}"/>
					<g:CheckBox ui:field="songCheckBox">Exact Phrase</g:CheckBox>
					<br/>
					<g:Label>Artist</g:Label>
					<g:TextBox ui:field="artistSearchBox" ui:styleName="{style.searchBox}"/>
					<g:CheckBox ui:field="artistCheckBox">Exact Phrase</g:CheckBox>
					<br/>
					<g:Label>Album</g:Label>
					<g:TextBox ui:field="albumSearchBox" ui:styleName="{style.searchBox}"/>
					<g:CheckBox ui:field="albumCheckBox">Exact Phrase</g:CheckBox>			
					<br/>			
					<g:SubmitButton ui:field="searchButton" ui:styleName="{style.searchButton}">Search</g:SubmitButton>				
					<g:Label ui:field="searchStatus" ui:styleName="{style.searchStatus}"/>
					<br/>
				</g:HTMLPanel>
			</g:FormPanel>
			<c:CellList ui:field="iTunesResults" ui:styleName="{style.iTunesResults}"/>
		</div>	
		<pf:Footer/>		
	</g:HTMLPanel>
</ui:UiBinder>
