<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">

<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
	xmlns:g='urn:import:com.google.gwt.user.client.ui'
	xmlns:c='urn:import:com.google.gwt.user.cellview.client'
	ui:generateFormat='com.google.gwt.i18n.rebind.format.PropertiesFormat'
	ui:generateKeys='com.google.gwt.i18n.rebind.keygen.MD5KeyGenerator'
	ui:generateLocales='default'>
	
	<ui:style>
		.searchBox {
			padding: 8px;
			height: 30px;
			width: 450px;
			font-size: 1.5em;
			color: #444;
			margin-bottom: 10px;
		}
		
		.searchButton {
			font-size: 1.3em;
			margin-top: 10px;
		}
		
		.iTunesResults{
			padding: 0;
			margin-top: 30px;
			width: 700px;
		}
		.iTunesResults > div > div {
			background: #FFF;
			clear: both;
			height: 60px;
			padding: 10px;
			border: 1px solid #999;
		}
		.iTunesResults > div > div:hover{
			background: #EEE;
		}
		.iTunesResults img {
			float: left;
			padding-right: 10px;
		}
		
		.searchAttributesListBox{
			padding: 8px;
			color: #444;
		}
		.searchStatus{
			margin-top: 10px;
		}
	</ui:style>

	<g:HTMLPanel ui:styleName="container">
		<g:HTMLPanel ui:field="topBar"/>
		<div class="content">
			<g:TextBox ui:field="searchBox" ui:styleName="{style.searchBox}"/>
			<br/>
			<g:ListBox ui:field="searchAttributesListBox" ui:styleName="{style.searchAttributesListBox}">	
				<g:item value='songTerm'>Song</g:item>
				<g:item value='albumTerm'>Album</g:item>
				<g:item value='artistTerm'>Artist</g:item>			
			</g:ListBox>		
			<br/>			
			<g:Button ui:field="searchButton" ui:styleName="{style.searchButton}">Search</g:Button>				
			<g:Label ui:field="searchStatus" ui:styleName="{style.searchStatus}"/>
			<br/>
			<c:CellList ui:field="iTunesResults" ui:styleName="{style.iTunesResults}"/>
		</div>			
	</g:HTMLPanel>
</ui:UiBinder>
