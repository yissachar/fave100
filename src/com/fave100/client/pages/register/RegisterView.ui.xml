<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">

<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
	xmlns:g='urn:import:com.google.gwt.user.client.ui'
	xmlns:pf='urn:import:com.fave100.client.pagefragments.footer'
	ui:generateFormat='com.google.gwt.i18n.rebind.format.PropertiesFormat'
	ui:generateKeys='com.google.gwt.i18n.rebind.keygen.MD5KeyGenerator'
	ui:generateLocales='default'>
	
	<ui:style>
		.registerContainer{
			margin: 0px auto;
		}

		.registerContainer h1 {
			text-align: center;
		}
		
		.registerContainer div{
			float: left;
		}
		
		.registerContainer a {
			margin: 5px 0;
		}
		
		.registerForm {
			background-color: #EEE;
			border: 1px solid #AAA;
			padding: 20px;
			border-radius: 5px;
		}
		
		.registerForm input {
			float: right;
			min-width: 60%;
		}
		
		.field {
			width: 100%;
			margin-bottom: 10px;
		}
		
		.statusMessage{
			display: block;
			font-size: 0.75em;
			margin-bottom: 5px;
		}
		
		.registerButton {
			margin-top: 15px;
			width: 100%;
		}
		
		.thirdPartyLinks, .thirdPartyLinks a {
			width: 100%;
		}
		
		.orDivider{
			padding: 50px;			
			font-size: 2em;
			text-align: center;
		}
		
		.thirdPartyUsernamePrompt {
			margin: 50px auto 0;
			width: 300px;
		}

		#alreadyHaveAccountPrompt {
			clear: both;
			padding-top: 30px;
			text-align: center;
		}			
	</ui:style>

	<ui:with type="com.fave100.client.place.NameTokens" field="nameTokens"/>
	<g:HTMLPanel styleName="wrap">
		<div class="container">
			<div class="content">		    	
				<g:HTMLPanel ui:field="registerContainer" styleName="{style.registerContainer}">
				    <h1 class="row">Fave100 Registration</h1>
				    <div class="row">
					    <g:FormPanel ui:field="registerForm" ui:styleName="col span_5">				
							<g:HTMLPanel styleName="{style.registerForm}">	
								<div class="{style.field}">				
									<g:Label>Username</g:Label>					
									<g:TextBox ui:field="usernameField"/>
									<span class="{style.statusMessage} error" ui:field="usernameStatusMessage"/>
								</div>
								<div class="{style.field}">
									<g:Label>Email</g:Label>					
									<g:TextBox ui:field="emailField"/>
									<span class="{style.statusMessage} error" ui:field="emailStatusMessage"/>
								</div>
								<div class="{style.field}">
									<g:Label>Password</g:Label>
									<g:PasswordTextBox ui:field="passwordField" />
								</div>
								<div class="{style.field}">
									<g:Label>Confirm password</g:Label>
									<g:PasswordTextBox ui:field="passwordRepeatField" />
									<span class="{style.statusMessage} error" ui:field="passwordStatusMessage"/>
								</div>
								<g:SubmitButton ui:field="registerButton" ui:styleName="{style.registerButton}">
									Register
								</g:SubmitButton>					
							</g:HTMLPanel>
						</g:FormPanel>	
						<div class="{style.orDivider} col span_2">or</div>				
						<div class="{style.registerForm} col span_5">		
							<div class="{style.thirdPartyLinks}">	
								<g:Anchor styleName="zocial googleplus" ui:field="registerWithGoogleButton">
									Register with Google
								</g:Anchor>
								<br/>
								<g:Anchor styleName="zocial twitter" ui:field="registerWithTwitterButton">
									Register with Twitter
								</g:Anchor>
								<br/>
								<g:Anchor styleName="zocial facebook" ui:field="registerWithFacebookButton">
									Register with Facebook
								</g:Anchor>
							</div>
						</div>
					</div>
				</g:HTMLPanel>
				
				<g:HTMLPanel ui:field="thirdPartyUsernamePrompt" styleName="{style.thirdPartyUsernamePrompt}">
					<div class="registerContainer {style.thirdPartyUsernamePrompt}">
						<span>Please enter a username to complete the registration process</span>
						<g:TextBox ui:field="thirdPartyUsernameField"/>
						<span class="{style.statusMessage} error" ui:field="thirdPartyUsernameStatusMessage"/>					
						<g:Button ui:field="thirdPartyUsernameSubmitButton">Submit</g:Button>
					</div>
				</g:HTMLPanel>
				
				<p id="alreadyHaveAccountPrompt">
				    Already have an account?
				    <g:InlineHyperlink targetHistoryToken="{nameTokens.getLogin}">Log in</g:InlineHyperlink>
				</p>
			</div>	
		</div>
		<pf:Footer/>
	</g:HTMLPanel>
</ui:UiBinder>
