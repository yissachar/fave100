<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">

<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
	xmlns:g='urn:import:com.google.gwt.user.client.ui'
	xmlns:pf='urn:import:com.fave100.client.pagefragments.footer'
	ui:generateFormat='com.google.gwt.i18n.rebind.format.PropertiesFormat'
	ui:generateKeys='com.google.gwt.i18n.rebind.keygen.MD5KeyGenerator'
	ui:generateLocales='default'>
	
	<ui:style>
		.registerContainer{
			display: block;
			margin: 0px auto;
			width: 800px;
		}
		.registerContainer div{
			float: left;
		}		
		.statusMessage{
			display: block;
			font-size: 0.75em;
			margin-bottom: 5px;
		}
		.orDivider{
			padding: 50px;			
		}
		.thirdPartyUserNameReminder{
			font-size: 0.7em;
			margin-bottom: 15px;
		}
	</ui:style>

	<g:HTMLPanel ui:styleName="container">
		<g:HTMLPanel ui:field="topBar"/>
		<div class="content">
			<h1>Fave100 Registration</h1>
			<g:HTMLPanel ui:field="registerContainer" styleName="{style.registerContainer}">
				<div class="registerContainer">					
					<span>Username</span>					
					<g:TextBox ui:field="usernameField"/>					
					<br/>
					<span class="{style.statusMessage} error" ui:field="usernameStatusMessage"/>
					<span>Email</span>					
					<g:TextBox ui:field="emailField"/>					
					<br/>					
					<span class="{style.statusMessage} error" ui:field="emailStatusMessage"/>
					<span>Password</span>
					<g:PasswordTextBox ui:field="passwordField" />
					<br/>
					<span>Confirm password</span>
					<g:PasswordTextBox ui:field="passwordRepeatField" />
					<span class="{style.statusMessage} error" ui:field="passwordStatusMessage"/>
					<g:Button ui:field="registerButton">Register</g:Button>					
				</div>
				<div class="{style.orDivider}">or</div>
				<div class="registerContainer">					
					<g:Anchor ui:field="registerWithGoogleButton">Register with Google</g:Anchor>
					<br/>
					<g:Anchor ui:field="registerWithTwitterButton">Register with Twitter</g:Anchor>
				</div>
			</g:HTMLPanel>
			<g:HTMLPanel ui:field="thirdPartyUsernamePrompt">
				<div class="registerContainer">
					<span>Please enter a username to complete the registration process</span>
					<g:TextBox ui:field="thirdPartyUsernameField"/>
					<span class="{style.statusMessage} error" ui:field="thirdPartyUsernameStatusMessage"/>					
					<g:Button ui:field="thirdPartyUsernameSubmitButton">Submit</g:Button>
				</div>
			</g:HTMLPanel>
		</div>
		<pf:Footer/>
	</g:HTMLPanel>
</ui:UiBinder>
