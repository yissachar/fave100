<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">

<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
	xmlns:g='urn:import:com.google.gwt.user.client.ui'
	ui:generateFormat='com.google.gwt.i18n.rebind.format.PropertiesFormat'
	ui:generateKeys='com.google.gwt.i18n.rebind.keygen.MD5KeyGenerator'
	ui:generateLocales='default'>
	
	<ui:style>
		.registerContainer{
			display: block;
			margin: 0px auto;
		}
		.usernameInput{
			
		}
		.registerButton{
			display: block;
		}
	</ui:style>

	<g:HTMLPanel>
		<g:HTMLPanel ui:field="topBar"/>
		<span ui:field="statusMessage"/>
		<g:HTMLPanel ui:field="registerContainer" styleName="{style.registerContainer}">
			<span>Username:</span>
			<g:TextBox ui:field="usernameField" styleName="{style.usernameInput}"/>
			<br/>
			<span>Password:</span>
			<g:PasswordTextBox ui:field="passwordField" />
			<br/>
			<span>Confirm password:</span>
			<g:PasswordTextBox ui:field="passwordRepeatField" />
			<g:Button ui:field="registerButton" styleName="{style.registerButton}">Register</g:Button>
			<g:Button ui:field="registerWithGoogleButton" styleName="{style.registerButton}">Register with Google</g:Button>
		</g:HTMLPanel>
	</g:HTMLPanel>
</ui:UiBinder>
