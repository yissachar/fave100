<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">

<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
	xmlns:g='urn:import:com.google.gwt.user.client.ui'
	ui:generateFormat='com.google.gwt.i18n.rebind.format.PropertiesFormat'
	ui:generateKeys='com.google.gwt.i18n.rebind.keygen.MD5KeyGenerator'
	ui:generateLocales='default'>

	<ui:style>
		.topNav{
			/*position: absolute;
			left: 0;
			top: 0;
			width: 100%;*/
			background-color: #A8DB88;			
			height: 40px;
			border-bottom: 1px solid #555;
			margin-bottom: 10px;
		}
		.topNav ul{
			list-style-type: none;	
			float: right;			
			margin-top: 10px; 	
		}
		.topNav li{
			display: inline;
			margin: 7px;
		}		
		
		.notifications{
			border: 1px solid #000;
			position: absolute;
			right: 0;
			top: 40px;
			width: 200px;
			height: 200px
		}
	</ui:style>

	<ui:with type="com.fave100.client.place.NameTokens" field="nameTokens"/>
	<g:HTMLPanel>
		<div class="{style.topNav}">		
			<ul>
				<li><span ui:field="greeting"/></li>
				<li><g:InlineHyperlink targetHistoryToken="{nameTokens.getMyfave100}" ui:field="myFave100Link">My Fave100</g:InlineHyperlink></li>				
				<li><span ui:field="logInLogOutLink">Log in</span></li>
				<li><g:InlineHyperlink targetHistoryToken="{nameTokens.getUsers}">Users</g:InlineHyperlink></li>
				<li><g:InlineHyperlink targetHistoryToken="{nameTokens.getHome}">Home</g:InlineHyperlink></li>
				<li><g:InlineHyperlink targetHistoryToken="{nameTokens.getRegister}" ui:field="registerLink">Register</g:InlineHyperlink></li>
			</ul>			
		</div>
		<div class="{style.notifications}"></div>
	</g:HTMLPanel>
</ui:UiBinder>
