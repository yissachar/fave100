<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">

<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
	xmlns:g='urn:import:com.google.gwt.user.client.ui'
	ui:generateFormat='com.google.gwt.i18n.rebind.format.PropertiesFormat'
	ui:generateKeys='com.google.gwt.i18n.rebind.keygen.MD5KeyGenerator'
	ui:generateLocales='default'>

	<ui:style>
		.topNav{
			background-color: #A8DB88;			
			height: 40px;
			border-bottom: 1px solid #555;
			margin-bottom: 10px;
		}
		
		.topNav > ul{
			list-style-type: none;	
			float: right;		
			height: 100%;
			position: relative;
		}
		
		.topNav li{
			display: inline-block;			
			height: 100%;
			vertical-align: top;
			cursor: pointer
		}	
		
		.topNav li:hover {
			background-color: #AFEB8F; 
		}
		
		.topNav li > a, .topNav li > span {
			display: inline-block;
			text-decoration: none;
			padding: 0 6px;
			line-height: 2.4em;
		}
		
		.topNav li .loginDropdown {
			position: absolute;
			right: 0;
			display:none;
			float: left;
		}
		
		.topNav li:hover .loginDropdown {
			display: block;			
		}	
		
		@external loginDropdown;		
		
	</ui:style>

	<ui:with type="com.fave100.client.place.NameTokens" field="nameTokens"/>
	<g:HTMLPanel styleName="{style.topNav}">		
			<ul>
				<li><span ui:field="greeting"/></li>
				<li><g:Anchor ui:field="myFave100Link">My Fave100</g:Anchor></li>
				<li><g:InlineHyperlink targetHistoryToken="{nameTokens.getUserlist}">Users</g:InlineHyperlink></li>
				<li><g:InlineHyperlink targetHistoryToken="{nameTokens.getHome}">Home</g:InlineHyperlink></li>
				<li><g:InlineHyperlink targetHistoryToken="{nameTokens.getRegister}" ui:field="registerLink">Register</g:InlineHyperlink></li>
				<li>
					<g:InlineHyperlink ui:field="logInLogOutLink">Log in</g:InlineHyperlink>
					<g:HTMLPanel ui:field="loginBox" styleName="{style.loginDropdown}"/>
				</li>
			</ul>
	</g:HTMLPanel>
</ui:UiBinder>
