<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">

<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
	xmlns:g='urn:import:com.google.gwt.user.client.ui'
	ui:generateFormat='com.google.gwt.i18n.rebind.format.PropertiesFormat'
	ui:generateKeys='com.google.gwt.i18n.rebind.keygen.MD5KeyGenerator'
	ui:generateLocales='default'>
	
	<ui:style>
		.registerContainer{
			margin: 0px auto;
		}

		.registerContainer h1 {
			text-align: center;
		}
		
		.registerContainer div{
			float: left;
		}
		
		.registerContainer a {
			margin: 5px 0;
		}
		
		.registerForm {
			background-color: #EEE;
			border: 1px solid #AAA;
			padding: 20px;
			border-radius: 5px;
		}
		
		.registerForm input {
			float: right;
			min-width: 60%;
		}
		
		.field {
			width: 100%;
			margin-bottom: 10px;
		}
		
		.statusMessage{
			display: block;
			font-size: 0.75em;
			margin: 5px 0;
			float: left;
		}
		
		.registerButton {
			margin-top: 15px;
			width: 100%;
		}
		
		.thirdPartyLinks {
			font-size: 80%;
		}
		
		.thirdPartyLinks, .thirdPartyLinks a {
			margin: 5px 0;
			width: 100%;			
		}
	</ui:style>

	<g:HTMLPanel ui:styleName="row">
		<g:FormPanel ui:field="registerForm" ui:styleName="col span_5">				
			<g:HTMLPanel styleName="{style.registerForm}">	
				<div class="{style.field}">				
					<g:Label>Username</g:Label>					
					<g:TextBox ui:field="usernameField"/>
					<span class="{style.statusMessage} error" ui:field="usernameStatusMessage"/>
				</div>
				<div class="{style.field}">
					<g:Label>Email</g:Label>					
					<g:TextBox ui:field="emailField"/>
					<span class="{style.statusMessage} error" ui:field="emailStatusMessage"/>
				</div>
				<div class="{style.field}">
					<g:Label>Password</g:Label>
					<g:PasswordTextBox ui:field="passwordField" />
				</div>
				<div class="{style.field}">
					<g:Label>Confirm password</g:Label>
					<g:PasswordTextBox ui:field="passwordRepeatField" />
					<span class="{style.statusMessage} error" ui:field="passwordStatusMessage"/>
				</div>
				<g:SubmitButton ui:field="registerButton" ui:styleName="{style.registerButton}">
					Register
				</g:SubmitButton>					
			</g:HTMLPanel>
		</g:FormPanel>	
		<div class="loginDivider col span_2">or</div>				
		<div class="{style.registerForm} col span_5">		
			<div class="{style.thirdPartyLinks}">	
				<g:Anchor styleName="zocial googleplus" ui:field="registerWithGoogleButton">
					Register with Google
				</g:Anchor>
				<br/>
				<g:Anchor styleName="zocial twitter" ui:field="registerWithTwitterButton">
					Register with Twitter
				</g:Anchor>
				<br/>
				<g:Anchor styleName="zocial facebook" ui:field="registerWithFacebookButton">
					Register with Facebook
				</g:Anchor>
			</div>
		</div>
	</g:HTMLPanel>
</ui:UiBinder>
