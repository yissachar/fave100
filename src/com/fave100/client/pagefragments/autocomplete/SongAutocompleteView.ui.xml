<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">

<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
	xmlns:g='urn:import:com.google.gwt.user.client.ui'
	ui:generateFormat='com.google.gwt.i18n.rebind.format.PropertiesFormat'
	ui:generateKeys='com.google.gwt.i18n.rebind.keygen.MD5KeyGenerator'
	ui:generateLocales='default'>

	<ui:style type="com.fave100.client.pagefragments.autocomplete.SongAutocompleteView.SongAutocompleteStyle">		
		.searchBox {		
			width: 100%;
			height: 40px;
			padding: 7px;
		}
		
		.resultsArea {
			border: 1px solid #999;
			border-top: 0px;
			background-color: #FFF;
			position: absolute;
			width: 608px
		}
		
		.resultsPanel > div {
			padding: 7px;
		}
		
		.artistName {
			font-size: 0.9em;
			font-style: italic;	
		}
		
		.selected {
			color: #FFF;
			background-color: #5eaae5;
		}
		
		.pagingButton {
			font-size: 1.2em;
			font-weight: bold;
			border-radius: 0px;
		}
		
		.navigator {
			border-top: 1px solid #AAA;
			text-align: center;
			overflow: hidden;
		}
		
		.navigator > * {
			display: inline;
		}
		
		.previousButton {
			float: left;
		}
		
		.nextButton { 
			float: right;
		}
		
		.pageStats {
			display: inline-block;
			margin-top: 9px;
		}
	</ui:style>
	
	<g:HTMLPanel ui:styleName="{style.songAutocomplete}">
		<g:TextBox ui:field="searchBox" ui:styleName="{style.searchBox}"/>		
		<g:HTMLPanel ui:field="resultsArea" ui:styleName="{style.resultsArea}">
			<g:FocusPanel ui:field="eventCatcher">
				<g:HTMLPanel ui:field="resultsPanel" ui:styleName="{style.resultsPanel}"/>
			</g:FocusPanel>
			<g:HTMLPanel ui:field="navigator" ui:styleName="{style.navigator}">
				<g:Button ui:field="previousButton" ui:styleName="{style.pagingButton} {style.previousButton}">&lt;</g:Button>
				<g:Label ui:field="pageStats" ui:styleName="{style.pageStats}"/>
				<g:Button ui:field="nextButton" ui:styleName="{style.pagingButton} {style.nextButton}">&gt;</g:Button>
			</g:HTMLPanel>			 
		</g:HTMLPanel>				
	</g:HTMLPanel>
</ui:UiBinder>
