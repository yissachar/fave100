<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">

<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
	xmlns:g='urn:import:com.google.gwt.user.client.ui'
	xmlns:w='urn:import:com.fave100.client.widgets.helpbubble'
	ui:generateFormat='com.google.gwt.i18n.rebind.format.PropertiesFormat'
	ui:generateKeys='com.google.gwt.i18n.rebind.keygen.MD5KeyGenerator'
	ui:generateLocales='default'>

	<ui:style type="com.fave100.client.pagefragments.autocomplete.SongAutocompleteView.SongAutocompleteStyle">
		.searchArea {
			overflow: hidden;
		}
		
		.searchBox {		
			width: 94%;
			height: 40px;
			padding: 7px;
			float: left;
		}
		
		.searchBoxDetails {
			margin-left: -80px;
			width: 80px;
			-moz-user-select: none; 
	        -khtml-user-select: none; 
	        -webkit-user-select: none; 
	        -o-user-select: none;
	        float: left;
		}		
		
		.inlineSearchCount {
			color: #777;
			margin-left: -30px;
	        padding: 8px 12px 5px 10px;
			float: right;
		}
		
		.searchLoadingIndicator {
	        padding: 12px 12px 5px 10px;
	        float: left; 
		}
		
		.clearSearchButton {
			font-size: 1.3em;
	        padding: 5px 12px 5px 10px;
	        float: right; 
		}
		
		.clearSearchButton:hover {
			cursor: pointer;
			color: #000;			
		}
		
		.backToTopButton {
			background-color: #fff;
			border: 1px solid #aaa;
			padding-top: 2px;
			height: 40px;
		}
		
		.backToTopButton:hover {
			cursor: pointer;
			background-color: #fafafa;
		}
		
		.helpBubble {
			margin: 0 auto;
			clear: both;
			padding-top: 15px;
		}
		
		.resultsArea {
			clear: both;
			border: 1px solid #999;
			border-top: 0px;
			background-color: #FFF;
			position: absolute;
			/* Just an initial setting, will be overridden at runtime */		
			width: 608px;	
		}
		
		.resultsPanel > div {
			padding: 7px;
		}
		
		.artistName {
			font-size: 0.9em;
			font-style: italic;	
		}
		
		.selected {
			color: #FFF;
			background-color: #5eaae5;
		}
		
		.pagingButton {
			font-size: 1.2em;
			font-weight: bold;
			border-radius: 0px;
		}
		
		.navigator {
			border-top: 1px solid #AAA;
			text-align: center;
			overflow: hidden;
		}
		
		.navigator > * {
			display: inline;
		}
		
		.previousButton {
			float: left;
		}
		
		.nextButton { 
			float: right;
		}
		
		.pageStats {
			display: inline-block;
			margin-top: 9px;
		}
		
		.placeholder {
			color: #aaa;
		}
	</ui:style>
	
	<ui:with type="com.fave100.client.resources.img.ImageResources" field="img"/>
	
	<g:HTMLPanel>
		<div class="{style.searchArea}">
			<g:TextBox ui:field="searchBox" ui:styleName="{style.searchBox}"/>
			<g:HTMLPanel ui:styleName="{style.searchBoxDetails}">				
				<g:HTMLPanel ui:field="searchLoadingIndicator" ui:styleName="{style.searchLoadingIndicator}">
					<g:Image resource="{img.searchLoadingIndicator}" />
				</g:HTMLPanel>				
				<g:InlineLabel ui:field="clearSearchButton" ui:styleName="{style.clearSearchButton}">&#x2716;</g:InlineLabel>
				<g:Label ui:field="inlineSearchCount" ui:styleName="{style.inlineSearchCount}"/>
			</g:HTMLPanel>
			<g:FocusPanel ui:field="backToTopButton" ui:styleName="{style.backToTopButton}">
				<g:Image resource="{img.upArrow}" ></g:Image>
			</g:FocusPanel>
			<w:HelpBubble ui:field="helpBubble" ui:styleName="{style.helpBubble}"/>
		</div>		
		<g:HTMLPanel ui:field="resultsArea" ui:styleName="{style.resultsArea} autocompleteResultsArea">
			<g:FocusPanel ui:field="eventCatcher">
				<g:HTMLPanel ui:field="resultsPanel" ui:styleName="{style.resultsPanel}"/>
			</g:FocusPanel>
			<g:HTMLPanel ui:field="navigator" ui:styleName="{style.navigator}">
				<g:Button ui:field="previousButton" ui:styleName="{style.pagingButton} {style.previousButton}">&#9664;</g:Button>
				<g:Label ui:field="pageStats" ui:styleName="{style.pageStats}"/>
				<g:Button ui:field="nextButton" ui:styleName="{style.pagingButton} {style.nextButton}">&#9654;</g:Button>
			</g:HTMLPanel>			 
		</g:HTMLPanel>				
	</g:HTMLPanel>
</ui:UiBinder>
