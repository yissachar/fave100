<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">

<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
	xmlns:g='urn:import:com.google.gwt.user.client.ui'
	ui:generateFormat='com.google.gwt.i18n.rebind.format.PropertiesFormat'
	ui:generateKeys='com.google.gwt.i18n.rebind.keygen.MD5KeyGenerator'
	ui:generateLocales='default'>

	<ui:style type="com.fave100.client.pagefragments.autocomplete.SongAutocompleteView.SongAutocompleteStyle">
		.songAutocomplete {
			display: block;
			margin: 0 auto;
			width: 80%;
		}
		
		.searchBox {		
			width: 100%;
			height: 40px;
			padding: 7px;
		}
		
		.resultsArea {
			border: 1px solid #999;
			background-color: #FFF;
		}
		
		.resultsPanel > div {
			padding: 7px;
		}
		
		.artistName {
			font-size: 0.9em;
			font-style: italic;	
		}
		
		.selected {
			color: #FFF;
			background-color: #5eaae5;
		}
	</ui:style>
	
	<g:HTMLPanel ui:styleName="{style.songAutocomplete}">
		<g:TextBox ui:field="searchBox" ui:styleName="{style.searchBox}"/>
		<g:FocusPanel ui:field="eventCatcher">
		<g:HTMLPanel ui:field="resultsArea" ui:styleName="{style.resultsArea}">
			<g:HTMLPanel ui:field="resultsPanel" ui:styleName="{style.resultsPanel}"></g:HTMLPanel>
			<g:HTMLPanel ui:field="navigator"></g:HTMLPanel> 
		</g:HTMLPanel>
		</g:FocusPanel>		
	</g:HTMLPanel>
</ui:UiBinder>
