<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">

<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
	xmlns:g='urn:import:com.google.gwt.user.client.ui' ui:generateLocales='default'>

	<ui:style type="com.fave100.client.pagefragments.favelist.widgets.FavePickWidget.FavePickWidgetStyle">
		.mainPanel {
			width:100%;
		}
		
		.mainPanel tr {
			padding: 10px 0;
		}
		
		.mainPanel td {
			padding: 0 20px 0 0;
		}
		
		.rank {
			border-radius: 99px;
			-moz-border-radius: 99px;
			-webkit-border-radius: 99px;
			background: red;
			color: #444;
			border: 3px #444 solid;
			background-color: #fff;
			-webkit-box-shadow: 0 px 2 px 4 px #000000; /* Saf3-4 */
			-moz-box-shadow: 0 px 2 px 4 px #000000; /* FF3.5 - 3.6 */
			box-shadow: 0 px 2 px 4 px #000000;
			/* Opera 10.5, IE9, FF4+, Chrome 10+ */
			display: inline-block;
			padding: 2px 2 px 2 px 2 px;
			margin: 3px;
			font-family: arial;
			width: 62px;
			height: 60px;
			text-align: center;
		}
		
		.song {
			font-size: 25px;
			font-weight: bold;
		}
		
		.artist {
			font-size: 20px;
		}
		
		.whyLine {
			font-weight: 11px;
			font-style: italic;
			font-color: #eee;
		}
		
		.hoverPanel td {
			padding: 0px;
		}
		
		.hoverPanel img {
			cursor: pointer;
		}	
	</ui:style>

	<g:HTMLPanel ui:field="container">
		<g:HorizontalPanel spacing="0" ui:styleName="{style.mainPanel}" verticalAlignment="middle" ui:field="mainPanel">
			<g:cell width="10%">
				<g:SimplePanel ui:field="rankPanel" ui:styleName="{style.rank}"></g:SimplePanel>
			</g:cell>

			<g:cell width="80%">
				<g:VerticalPanel >
					<g:Anchor ui:field="song" ui:styleName="{style.song}"></g:Anchor>
					<g:InlineLabel ui:field="artist" ui:styleName="{style.artist}"></g:InlineLabel>
					<g:SimplePanel ui:field="whyLinePanel" ui:styleName="{style.whyLine}"></g:SimplePanel>
				</g:VerticalPanel>

			</g:cell>

			<g:HorizontalPanel ui:field="hoverPanel" ui:styleName="hoverHidden {style.hoverPanel}" verticalAlignment="middle"/>
		</g:HorizontalPanel>
	</g:HTMLPanel>



</ui:UiBinder>


