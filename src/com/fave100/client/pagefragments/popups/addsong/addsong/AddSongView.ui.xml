<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui">
             
    <ui:style>
    
    .lightBoxContainer {
		position: fixed;
		width: 100%;
		top: 15%;
		left: 0;
		height: 350px;
		max-height: 70%;
		overflow: hidden;
		z-index: 100000;
    }
    
    .lightBoxBackground {
		position: fixed;
		top: 0;
		left: -25%;
		width: 125%;
		height: 100%;
		opacity: .40;
		background-color: #000;
		z-index: 99999; 
	}
        
    .lightBox {
		border: 1px solid #555; 
		position: relative;
		width: 35%;
		margin: 0 auto;
		min-width: 250px;
		max-width: 800px;
		z-index: 100000;
		height: 100%;
    }
    
    .header {
		color: #fff;
		background-color: #5eaae5;
		padding: 5px;
    }    
		
	.content {
		padding: 8px;
		background-color: #fff;
		height: 100%;
	}
	
	.checkboxes {
		height: 80%;
		overflow-y: auto;
	}
	
	.checkboxes > span {		
		display: block;
		padding: 3px;
	}
	
	.checkboxes > span > input {
		margin-right: 7px;
	}
	
	.content > button {
		margin-top: 10px;
		margin-right: 10px;
	}
    </ui:style>
    
    <g:PopupPanel autoHideOnHistoryEventsEnabled="true" autoHideEnabled="true">
    	<g:HTMLPanel ui:field="loginLightBox" styleName="{style.lightBoxContainer}">
			<g:FocusPanel ui:field="lightBoxBackground" styleName="{style.lightBoxBackground}"/>			
			<g:FlowPanel ui:styleName="{style.lightBox}">
				<g:SimplePanel ui:styleName="{style.header}">
					<g:Label ui:field="headerLabel"></g:Label>
				</g:SimplePanel>
				<g:FlowPanel ui:styleName="{style.content}">
					<g:FlowPanel ui:field="checkboxContainer" ui:styleName="{style.checkboxes}" />
					<g:Button ui:field="okButton">OK</g:Button>
					<g:Button ui:field="cancelButton">Cancel</g:Button>
				</g:FlowPanel>				
			</g:FlowPanel>
		</g:HTMLPanel>
    </g:PopupPanel>
</ui:UiBinder>
