<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">

<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
	xmlns:g='urn:import:com.google.gwt.user.client.ui'
	ui:generateFormat='com.google.gwt.i18n.rebind.format.PropertiesFormat'
	ui:generateKeys='com.google.gwt.i18n.rebind.keygen.MD5KeyGenerator'
	ui:generateLocales='default'>

	<ui:style>
		.noAccountPrompt {
			padding: 5px;
			margin-left: 33%;
		}
		
		@external .loginLightBox;
		
		.loginLightBox {
			padding-bottom: 5px;
		}
	</ui:style>
	
	<ui:with type="com.fave100.client.place.NameTokens" field="nameTokens" />
	<ui:with field="img" type="com.fave100.client.resources.img.ImageResources" />
	
	<g:PopupPanel>
		<g:HTMLPanel ui:field="loginLightBox" styleName="loginLightBoxContainer">
			<g:FocusPanel ui:field="lightBoxBackground" styleName="lightBoxBackground"/>			
			<g:HTMLPanel styleName="loginLightBox">
				<div class="lightBoxHeader">
					<g:Image resource="{img.logo}"/>
				</div>
				<g:HTMLPanel ui:field="loginContainer" ui:styleName="innerLoginBox"/>
				<g:InlineHyperlink targetHistoryToken="{nameTokens.getRegister}" ui:styleName="{style.noAccountPrompt}">
					Don't have an account? Register
				</g:InlineHyperlink>
			</g:HTMLPanel>
		</g:HTMLPanel>		
	</g:PopupPanel>
</ui:UiBinder>
