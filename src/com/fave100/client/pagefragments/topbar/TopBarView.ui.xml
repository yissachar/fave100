<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">

<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
	xmlns:g='urn:import:com.google.gwt.user.client.ui'
	xmlns:w='urn:import:com.fave100.client.widgets'
	ui:generateFormat='com.google.gwt.i18n.rebind.format.PropertiesFormat'
	ui:generateKeys='com.google.gwt.i18n.rebind.keygen.MD5KeyGenerator'
	ui:generateLocales='default'>

	<ui:style type="com.fave100.client.pagefragments.topbar.TopBarView.TopBarStyle">
		
		
		.topNavSticky {
			background-color: #5eaae5;			
			height: 50px;
			margin-bottom: 25px;
			width: 1px;
		}
		
		.topNav {
			background-color: #5eaae5;			
			height: 50px;
			border-bottom: 1px solid #555;			
			position: fixed;
			top: 0;
			width: 100%;
			z-index: 99998;
		}
		
		.topNav > ul{
			list-style-type: none;	
			float: right;		
			height: 100%;
			position: relative;
		}
		
		.topNav li{
			display: inline-block;			
			height: 100%;
			vertical-align: top;
			cursor: pointer;
			float: right;
		}	
		
		.topNav li:hover {
			background-color: #FFFFFF; 
		}				
		
		.topNav li > a, .topNav li > span {
			color: #FFF;
			display: inline-block;
			text-decoration: none;
			padding: 0 6px;
			font-size: 1.2em;
			line-height: 2.56em;
		}
		
		.topNav li:hover > a, .topNav li:hover > span {
			color: #5eaae5;
		}
		
		.topBarDropShadow {
			box-shadow: 0px 1px 2px #444;
		}
		
		.loadingIndicator {
			position: absolute;
			margin-left: 486px;
			display: block;

		}
		
		.subTopContainer{
			display: block;
			width: 960px;
			margin: 0 auto;
		}
		
		.notification {
			position: absolute;
			margin-left: 510px;
			margin-top: 10px;
			text-align: center;
			color: #FFF;
		}
		
		.faveLogo {		
			float: left;
			border: none;
			padding-left: 3px;
		}		
		
		.faveLogo:hover {
			cursor: pointer;
		}
						
		.userInfo {
			float: left;
			padding: 0 5px;
			margin-top: 12px;
	  	}
	  	
	  	.userInfo:hover {
			background-color: #FFFFFF;
		} 
	  	
	  	.userAvatar {
			width: 40px;
			margin-top: 5px;
		}
		
		.usernameLabel {
			margin-left: 15px;
			font-size: 1.2em;
			color: #fff;
		}
				
		.dropDown {
			display: none;
			clear: both;
			margin-top: 5px;
			background-color: #fff;
		}
		
		.dropDown a {			
			padding: 5px;
			display: block;			
		}
		
		.dropDown a:hover {
			background-color: #5eaae5;
			color: #fff;
			text-decoration: none;			
		}
		
		.loggedInContainer:hover .dropDown {
			display: block;
		}
		
		.loggedInContainer:hover {
			border: 1px solid #bbb;
		}
		
		.loggedInContainer:hover .userInfo {						
			border-bottom: 1px solid #bbb;
		}
		
		.loggedInContainer:hover .usernameLabel {
			color: #5eaae5;
		}
				
	</ui:style>

	<ui:with type="com.fave100.client.place.NameTokens" field="nameTokens"/>
	<ui:with field="img" type="com.fave100.client.resources.img.ImageResources" />
	
	<g:HTMLPanel>		
		<!-- We will hide the topNavSticky element behind the real top nav in order to get a sticky header effect
			 without using any JavaScript. topNav is the actual element with position:fixed ensuring it stays at 
			 top of screen. topNavSticky is a normally positioned blank element that provides the proper buffer 
			 when the browser is at 0, 0.
		 -->
		<div class="{style.topNavSticky}"/>
		<g:HTMLPanel ui:styleName="{style.topNav}" ui:field="topBar">
			<div class="container">
				<w:ImageHyperlink ui:field="logoLink" targetHistoryToken="{nameTokens.getHome}" styleName="{style.faveLogo}" resource="{img.logo}"/>		
				<g:Image ui:field="loadingIndicator" ui:styleName="{style.loadingIndicator}" resource="{img.loadingIndicator}"/>			
				<g:Label ui:field="notification" ui:styleName="{style.notification}"/>
				<ul>						
					<li>		
						<g:FlowPanel ui:field="loggedInContainer" ui:styleName="{style.loggedInContainer}">				
							<g:FlowPanel ui:field="userInfo" ui:styleName="{style.userInfo}">
								<g:InlineLabel ui:field="usernameLabel" ui:styleName="{style.usernameLabel}"/>
							</g:FlowPanel>
							<g:FlowPanel ui:styleName="{style.dropDown}">
								<g:Hyperlink ui:field="listLink">My List</g:Hyperlink>
								<g:Hyperlink targetHistoryToken="{nameTokens.getProfile}">Settings</g:Hyperlink>
								<g:Hyperlink ui:field="logOutLink">Sign out</g:Hyperlink>
							</g:FlowPanel>
						</g:FlowPanel>
						<g:InlineLabel ui:field="loginButton">Sign in</g:InlineLabel>						
					</li>			
				</ul>
			</div>
		</g:HTMLPanel>			
	</g:HTMLPanel>
</ui:UiBinder>
