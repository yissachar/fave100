<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">

<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
	xmlns:g='urn:import:com.google.gwt.user.client.ui'
	ui:generateFormat='com.google.gwt.i18n.rebind.format.PropertiesFormat'
	ui:generateKeys='com.google.gwt.i18n.rebind.keygen.MD5KeyGenerator'
	ui:generateLocales='default'>

	<ui:style type="com.fave100.client.pagefragments.topbar.TopBarView.TopBarStyle">
		.lightBoxBackground {
			position: fixed;
			top: 0;
			width: 100%;
			height: 100%;
			opacity: .40;
			background-color: #000;
			z-index: 99999;
		}
		
		.loginLightBox { 
			position: fixed;
			top: 20%;
			left: 25%;
			width: 50%;
			z-index: 100000;
		}
		
		.lightBoxHeader {
			display: block;
			background-color: #5eaae5;
			padding: 6px 0;
			border-bottom: 1px solid #555;
		}
		
		.lightBoxHeader img {
			display: block;
			margin: 0 auto;
		}
		
		.innerLoginBox {	
			padding: 15px;
		}
		
		.topNavSticky {
			background-color: #5eaae5;			
			height: 50px;
			margin-bottom: 25px;
			width: 1px;
		}
		
		.topNav {
			background-color: #5eaae5;			
			height: 50px;
			border-bottom: 1px solid #555;			
			position: fixed;
			top: 0;
			width: 100%;
			z-index: 99998;
		}
		
		.topNav > ul{
			list-style-type: none;	
			float: right;		
			height: 100%;
			position: relative;
		}
		
		.topNav li{
			display: inline-block;			
			height: 100%;
			vertical-align: top;
			cursor: pointer;
			float: right;
		}	
		
		.topNav li:hover {
			background-color: #FFFFFF; 
		}				
		
		.topNav li > a, .topNav li > span {
			color: #FFF;
			display: inline-block;
			text-decoration: none;
			padding: 0 6px;
			font-size: 1.3em;
			line-height: 2.4em;
		}
		
		.topNav li:hover > a, .topNav li:hover > span {
			color: #5eaae5;
		}
		
		.topBarDropShadow {
			box-shadow: 0px 1px 2px #444;
		}
		
		.loadingIndicator {
			position: absolute;
			margin-left: 486px;
			display: block;

		}
		
		.subTopContainer{
			display: block;
			width: 960px;
			margin: 0 auto;
		}
		
		.notification {
			position: absolute;
			margin-left: 510px;
			margin-top: 10px;
			text-align: center;
			color: #FFF;
		}
		
		.faveLogo {		
			float: left;	
		}
		
		@external loginLightBox;		
		
	</ui:style>

	<ui:with type="com.fave100.client.place.NameTokens" field="nameTokens"/>
	<g:HTMLPanel>
		<!-- A login lightbox  -->
		<g:HTMLPanel ui:field="loginLightBox">
			<g:FocusPanel ui:field="lightBoxBackground" styleName="{style.lightBoxBackground}"/>			
			<g:HTMLPanel styleName="{style.loginLightBox}">
				<div class="{style.lightBoxHeader}">
					<g:Image url="img/logo.png"/>
				</div>
				<g:HTMLPanel ui:field="loginBox" ui:styleName="{style.innerLoginBox}"/>
			</g:HTMLPanel>
		</g:HTMLPanel>
		<!-- We will hide the topNavSticky element behind the real top nav in order to get a sticky header effect
			 without using any JavaScript. topNav is the actual element with position:fixed ensuring it stays at 
			 top of screen. topNavSticky is a normally positioned blank element that provides the proper buffer 
			 when the browser is at 0, 0.
		 -->
		<div class="{style.topNavSticky}"/>
		<g:HTMLPanel ui:styleName="{style.topNav}" ui:field="topBar">
			<div class="container">
				<g:InlineHyperlink targetHistoryToken="{nameTokens.getHome}">	
					<img class="{style.faveLogo}" src="img/Logo.png" alt="Fave100 logo"/>
				</g:InlineHyperlink>		
				<g:Image ui:field="loadingIndicator" ui:styleName="{style.loadingIndicator}" url="img/loading-indicator.gif"/>			
				<g:Label ui:field="notification" ui:styleName="{style.notification}"/>
				<ul>						
					<li>
						<g:InlineHyperlink ui:field="logOutLink">Log out</g:InlineHyperlink>
						<g:InlineLabel ui:field="loginButton">Log in</g:InlineLabel>
					</li>
					<li><g:InlineHyperlink targetHistoryToken="{nameTokens.getRegister}" ui:field="registerLink">Register</g:InlineHyperlink></li>
					<li><g:Anchor ui:field="greeting"></g:Anchor></li>
				</ul>
			</div>
		</g:HTMLPanel>			
	</g:HTMLPanel>
</ui:UiBinder>
