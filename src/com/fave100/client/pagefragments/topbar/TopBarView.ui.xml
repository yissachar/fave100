<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">

<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
	xmlns:g='urn:import:com.google.gwt.user.client.ui'
	ui:generateFormat='com.google.gwt.i18n.rebind.format.PropertiesFormat'
	ui:generateKeys='com.google.gwt.i18n.rebind.keygen.MD5KeyGenerator'
	ui:generateLocales='default'>

	<ui:style>
		.topNav{
			background-color: #5eaae5;			
			height: 40px;
			border-bottom: 1px solid #555;
			margin-bottom: 25px;
		}
		
		.topNav > ul{
			list-style-type: none;	
			float: right;		
			height: 100%;
			position: relative;
		}
		
		.topNav li{
			display: inline-block;			
			height: 100%;
			vertical-align: top;
			cursor: pointer
		}	
		
		.topNav li:hover {
			background-color: #FFFFFF; 
		}				
		
		.topNav li > a, .topNav li > span {
			color: #FFF;
			display: inline-block;
			text-decoration: none;
			padding: 0 6px;
			line-height: 2.4em;
		}
		
		.topNav li:hover > a, .topNav li:hover > span {
			color: #5eaae5;
		}

		.loginDropdown {
			width: 500px;
		}
		
		.topNav li .loginDropdown {
			position: absolute;
			right: 0;
			display:none;
			float: left;
		}
		
		.topNav li:hover .loginDropdown {
			display: block;			
		}	
		
		.subTopContainer{
			display: block;
			width: 960px;
			margin: 0 auto;
		}
		
		.faveLogo, .listOfTheDay {
			background: #FFF;
			border-radius: 5px;
			border: 1px solid #AAA;
		}
		
		.faveLogo {
			clear: both;			
			width: 200px;
			padding: 15px;
			display: inline-block;
		}
		
		.faveLogo h1 {
			margin: 0;
		}
		
		@external loginDropdown;		
		
	</ui:style>

	<ui:with type="com.fave100.client.place.NameTokens" field="nameTokens"/>
	<g:HTMLPanel>
			<div class="{style.topNav}">
			<g:InlineHyperlink targetHistoryToken="{nameTokens.getHome}">	
				<img src="img/Logo.png" alt="Fave100 logo"/>
			</g:InlineHyperlink>
			<ul>
				<li><span ui:field="greeting"/></li>
				<li><g:Anchor ui:field="myFave100Link">My Fave100</g:Anchor></li>
				<li><g:InlineHyperlink targetHistoryToken="{nameTokens.getUserlist}">Users</g:InlineHyperlink></li>
				<li><g:InlineHyperlink targetHistoryToken="{nameTokens.getHome}">Home</g:InlineHyperlink></li>
				<li><g:InlineHyperlink targetHistoryToken="{nameTokens.getRegister}" ui:field="registerLink">Register</g:InlineHyperlink></li>
				<li>
					<g:InlineHyperlink ui:field="logInLogOutLink">Log in</g:InlineHyperlink>
					<g:HTMLPanel ui:field="loginBox" styleName="{style.loginDropdown}"/>
				</li>
			</ul>
			</div>			
	</g:HTMLPanel>
</ui:UiBinder>
