<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">

<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
	xmlns:g='urn:import:com.google.gwt.user.client.ui'
	ui:generateFormat='com.google.gwt.i18n.rebind.format.PropertiesFormat'
	ui:generateKeys='com.google.gwt.i18n.rebind.keygen.MD5KeyGenerator'
	ui:generateLocales='default'>

	<ui:style>
		.topNavSticky {
			background-color: #5eaae5;			
			height: 50px;
			margin-bottom: 25px;
			width: 1px;
		}
		
		.topNav{
			background-color: #5eaae5;			
			height: 50px;
			border-bottom: 1px solid #555;
			margin-bottom: 25px;
			position: fixed;
			top: 0;
			width: 100%;
			z-index: 99998;
			overflow: hidden;
		}
		
		.topNav > ul{
			list-style-type: none;	
			float: right;		
			height: 100%;
			position: relative;
		}
		
		.topNav li{
			display: inline-block;			
			height: 100%;
			vertical-align: top;
			cursor: pointer;
			float: right;
		}	
		
		.topNav li:hover {
			background-color: #FFFFFF; 
		}				
		
		.topNav li > a, .topNav li > span {
			color: #FFF;
			display: inline-block;
			text-decoration: none;
			padding: 0 6px;
			font-size: 1.3em;
			line-height: 2.4em;
		}
		
		.topNav li:hover > a, .topNav li:hover > span {
			color: #5eaae5;
		}

		.loginDropdown {
			width: 510px;
		}
		
		.topNav li .loginDropdown {
			position: absolute;
			right: 0;
			display:none;
			float: left;
		}
		
		.topNav li:hover .loginDropdown {
			display: block;			
		}	
		
		.subTopContainer{
			display: block;
			width: 960px;
			margin: 0 auto;
		}
		
		.notification {
			float: left;
			margin-top: 10px;
		}
		
		.faveLogo {		
			float: left;	
		}
		
		@external loginDropdown;		
		
	</ui:style>

	<ui:with type="com.fave100.client.place.NameTokens" field="nameTokens"/>
	<g:HTMLPanel>
			<!-- We will hide the topNavSticky element behind the real top nav in order to get a sticky header effect
				 without using any JavaScript. topNav is the actual element with position:fixed ensuring it stays at 
				 top of screen. topNavSticky is a normally positioned blank element that provides the proper buffer 
				 when the browser is at 0, 0.
			 -->
			<div class="{style.topNavSticky}"/>
			<div class="{style.topNav}">
				<div class="container">
					<g:InlineHyperlink targetHistoryToken="{nameTokens.getHome}">	
						<img class="{style.faveLogo}" src="img/Logo.png" alt="Fave100 logo"/>
					</g:InlineHyperlink>					
					<g:Label ui:field="notification" ui:styleName="{style.notification}"/>
					<ul>						
						<li>
							<g:InlineHyperlink ui:field="logInLogOutLink">Log in</g:InlineHyperlink>
							<g:HTMLPanel ui:field="loginBox" styleName="{style.loginDropdown}"/>
						</li>
						<li><g:InlineHyperlink targetHistoryToken="{nameTokens.getRegister}" ui:field="registerLink">Register</g:InlineHyperlink></li>
						<li><g:Anchor ui:field="myFave100Link">My Fave100</g:Anchor></li>
						<li><span ui:field="greeting"/></li>
					</ul>
				</div>
			</div>			
	</g:HTMLPanel>
</ui:UiBinder>
