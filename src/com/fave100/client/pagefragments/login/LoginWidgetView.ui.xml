<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">

<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
	xmlns:g='urn:import:com.google.gwt.user.client.ui' ui:generateFormat='com.google.gwt.i18n.rebind.format.PropertiesFormat'
	ui:generateKeys='com.google.gwt.i18n.rebind.keygen.MD5KeyGenerator'
	ui:generateLocales='default'>

	<ui:style>
		.loginForm div {
			float: left;
		}
		
		.forgotPasswordLink {
			display: block;
			font-size: 0.8em;
			padding: 5px;
			margin-top: 5px;
		}
		
		.field {
			width: 100%;
			margin-bottom: 10px;
		}
		
		.loginButton {
			width: 100%;			
		}
		
		.thirdPartyLinks, .thirdPartyLinks a {
			margin: 5px 0;
			width: 100%;
		}
	</ui:style>

	<ui:with type="com.fave100.client.place.NameTokens" field="nameTokens" />
	<g:HTMLPanel ui:styleName="row">
		<g:FormPanel ui:field="loginForm" ui:styleName="{style.loginForm} col span_5">
			<g:HTMLPanel styleName="nativeLoginBox">
				<div class="{style.field}">
					<g:Label>Username</g:Label>
					<g:TextBox ui:field="usernameInput" />
				</div>
				<div class="{style.field}">
					<g:Label>Password</g:Label>
					<g:PasswordTextBox ui:field="passwordInput" />
					<g:Label styleName="error" ui:field="loginStatusMessage" />
				</div>
				<g:SubmitButton ui:field="loginButton" ui:styleName="{style.loginButton}">Sign In</g:SubmitButton>
				<g:InlineHyperlink styleName="{style.forgotPasswordLink}"
					targetHistoryToken="{nameTokens.getPasswordreset}">Forgot your password?</g:InlineHyperlink>
			</g:HTMLPanel>
		</g:FormPanel>
		<div class="loginDivider col span_2" >or</div>
		<div class="thirdPartyLoginBox col span_5">
			<div class="{style.thirdPartyLinks}">
				<g:Anchor styleName="zocial googleplus" ui:field="signInWithGoogleButton">Sign in
					with Google</g:Anchor>
				<br />
				<g:Anchor styleName="zocial twitter" ui:field="signInWithTwitterButton">Sign in with
					Twitter</g:Anchor>
				<br />
				<g:Anchor styleName="zocial facebook" ui:field="signInWithFacebookButton">Sign in with
					Facebook</g:Anchor>
			</div>
		</div>
	</g:HTMLPanel>
</ui:UiBinder>
