<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">

<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
	xmlns:g='urn:import:com.google.gwt.user.client.ui'
	ui:generateFormat='com.google.gwt.i18n.rebind.format.PropertiesFormat'
	ui:generateKeys='com.google.gwt.i18n.rebind.keygen.MD5KeyGenerator'
	ui:generateLocales='default'>
	
	<g:HTMLPanel>
		<g:FormPanel ui:field="loginForm">
			<g:VerticalPanel styleName="nativeLoginBox">
				<g:Label>Username</g:Label>
				<g:TextBox ui:field="usernameInput"/>
				<g:Label>Password</g:Label>
				<g:PasswordTextBox ui:field="passwordInput"/>
				<g:Label styleName="error" ui:field="loginStatusMessage"/>
				<g:SubmitButton ui:field="loginButton">Sign In</g:SubmitButton>
			</g:VerticalPanel>
		</g:FormPanel>
		<div class="loginDivider"/>
		<div class="thirdPartyLoginBox">
			<g:Anchor styleName="zocial googleplus" ui:field="signInWithGoogleButton">Sign in with Google</g:Anchor>
			<br/>
			<g:Anchor styleName="zocial twitter" ui:field="signInWithTwitterButton">Sign in with Twitter</g:Anchor>
		</div>
	</g:HTMLPanel>
</ui:UiBinder>
