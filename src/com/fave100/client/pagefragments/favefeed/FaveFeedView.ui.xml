<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">

<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
	xmlns:g='urn:import:com.google.gwt.user.client.ui' 
	ui:generateFormat='com.google.gwt.i18n.rebind.format.PropertiesFormat'
	ui:generateKeys='com.google.gwt.i18n.rebind.keygen.MD5KeyGenerator'
	ui:generateLocales='default'>

	<ui:style>
		.faveFeed {
			position: fixed;
			border: 1px solid #999;
			margin-left: 720px;
			width: 240px;
			z-index: 99998;
			margin-top: 50px;
			background: #FFF;
		}
		
		.faveFeed h4,.faveFeedTitle {
			background: #E4E4E4;
			padding: 7px;
			color: #333;
			border-bottom: 1px solid #BBB;
		}
		
		.faveFeed a,.faveFeed p,.faveFeedMessage {
			display: block;
			padding: 8px;
		}
		
		.faveFeed ul,.activityPanel {
			list-style-type: none;
			padding: 0;
		}
		
		.faveFeed li,.activityPanel a {
			border-bottom: 1px solid #999;
			cursor: pointer;
		}
		
		.faveFeed li a,.activityPanel a {
			text-decoration: none;
			padding: 7px;
		}
		
		.faveFeed li:hover,.activityPanel a:hover {
			background: #C1EDA6;
		}
	</ui:style>

	<ui:with type="com.fave100.client.place.NameTokens" field="nameTokens" />
	<g:HTMLPanel styleName="{style.faveFeed}">
		<g:InlineHTML ui:field="panel" />
		<g:Label ui:field='faveFeedTitle' ui:styleName='{style.faveFeedTitle}' />
		<g:InlineHTML ui:field='activityPanel' ui:styleName='{style.activityPanel}' />
		<g:Label ui:field='faveFeedMessage' ui:styleName='{style.faveFeedMessage}' />
		<g:InlineHyperlink targetHistoryToken='{nameTokens.getLogin}'
			ui:field='loginLink'>Try out Fave100 today</g:InlineHyperlink>
	</g:HTMLPanel>
</ui:UiBinder>
