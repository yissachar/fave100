<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	
	<ui:style>
		.userThumbList {
			border: 1px solid #555;
			border-radius: 5px;
			width: 200px;
			height: 150px;
			font-size: 1.2em;
			background-color: #FFF;
			margin: 30px 15px;
			float: left;
			overflow: hidden;
			box-shadow: 0 1px 1px rgba(0, 0, 0, 0.3);
		}		
		
		.header {
			width: 100%;
			background-color: #5eaae5;
			color: #FFF;
			border-bottom: 1px solid #555;
			height: 30px;
		}
		
		.userProfileImage {
			max-width: 30px;
			max-height: 30px;
			position: absolute;
			border-top-left-radius: 3px;
		}
		
		.username {
			color: #FFF;
			vertical-align: top;
			text-align: center;
			display: inline-block;
			width: 100%;
		}
		
		.listArea {			
			color: #5eaae5;
			padding: 5px;
			text-align: center;
		}
		
		.songRank {			
			font-weight: bold;
			padding: 5px;
			text-align: center;
		}
		
		.songTitle {
			color: #5eaae5;
		}
		
	</ui:style>
	
	<g:HTMLPanel ui:styleName="{style.userThumbList}">
		<div class="{style.header}">
			<g:Image ui:styleName="{style.userProfileImage}" ui:field="userProfileImage"/>
			<g:InlineHyperlink ui:styleName="{style.username}" ui:field="username"/>
		</div>
		<div class="{style.listArea}">
			<g:Label ui:styleName="{style.songRank}" ui:field="songRank"/>
			<g:InlineHyperlink ui:styleName="{style.songTitle}" ui:field="songTitle"/>
		</div>
	</g:HTMLPanel>
</ui:UiBinder> 