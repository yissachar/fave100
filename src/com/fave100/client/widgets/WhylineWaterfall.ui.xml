<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	
	<ui:style>
		.header {
			font-size: 2em;
			text-align: center;
			margin: 20px 0;
			padding: 20px 0;
			border-top: 2px solid #5eaae5;
			color: #5eaae5;
		}
	</ui:style>
	
	<g:HTMLPanel>
		<g:Label ui:field="header" ui:styleName="{style.header}">Wall of Why-Lines</g:Label>
		<g:Grid ui:field="grid"/>
	</g:HTMLPanel>
</ui:UiBinder> 