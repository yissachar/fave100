<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui">
    <ui:style>
	    .lightBoxContainer {
			position: fixed;
			width: 100%;
			top: 15%;
			left: 0;
			max-height: 70%;
			overflow: hidden;
			z-index: 100000;
	    }
	    
	    .lightBoxBackground {
			position: fixed;
			top: 0;
			left: -25%;
			width: 125%;
			height: 100%;
			opacity: .40;
			background-color: #000;
			z-index: 99999; 
		}
	        
	    .lightBox {
			border: 1px solid #555; 
			position: relative;
			width: 35%;
			margin: 0 auto;
			min-width: 250px;
			max-width: 800px;
			z-index: 100000;
			height: 100%;
	    }
			
		.content {
			padding: 8px;
			background-color: #fff;
			height: 100%;
		}
		
		.content button {			
			width: 30%;
			margin: 10px;
			margin-left: 45px;
		}
    </ui:style>
    
    <g:PopupPanel autoHideOnHistoryEventsEnabled="true" autoHideEnabled="true">
    	<g:HTMLPanel ui:field="loginLightBox" styleName="{style.lightBoxContainer}">
			<g:FocusPanel ui:field="lightBoxBackground" styleName="{style.lightBoxBackground}"/>			
			<g:FlowPanel ui:styleName="{style.lightBox}">
				<g:FlowPanel ui:styleName="{style.content}">
					<g:Label>Are you sure you want to delete this list? This action cannot be undone.</g:Label>
					<g:Button ui:field="okButton">OK</g:Button>
					<g:Button ui:field="cancelButton">Cancel</g:Button>
				</g:FlowPanel>				
			</g:FlowPanel>
		</g:HTMLPanel>
    </g:PopupPanel>
</ui:UiBinder>
