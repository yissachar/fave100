<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	
	<ui:style>
		.result {
			width: 100%;
			height: 100%;
		}
		
		.advancedSearchInfoContainer {
			display: inline-block;
			white-space: nowrap;
			overflow: hidden;
		}
		
		.advancedSearchTrackName {			
			font-size: 1.1em;
			vertical-align: top;
		}
		
		.advancedSearchArtistName {
			font-style: italic;
			white-space: nowrap;
			overflow: hidden;
		}
		
		.advancedSearchAddButton {
			font-size: 1.3em;
			height: 100%;
			float: right;
		}
	
	</ui:style>
	
	<ui:with type="java.lang.String" field="songTitle"/>
	<ui:with type="java.lang.String" field="artist"></ui:with>
	
	<div class="{style.result} row">
		<span class="{style.advancedSearchTrackName}"><ui:text from="{songTitle}" /></span>
		<span class="{style.advancedSearchArtistName}"><ui:text from="{artist}" /></span>
		<button class="{style.advancedSearchAddButton}" ui:field="advancedSearchAddButton">+</button>
	</div>
	
</ui:UiBinder> 