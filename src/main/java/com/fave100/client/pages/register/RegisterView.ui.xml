<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">

<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
	xmlns:g='urn:import:com.google.gwt.user.client.ui'
	xmlns:pf='urn:import:com.fave100.client.pagefragments.footer'
	ui:generateFormat='com.google.gwt.i18n.rebind.format.PropertiesFormat'
	ui:generateKeys='com.google.gwt.i18n.rebind.keygen.MD5KeyGenerator'
	ui:generateLocales='default'>
	
	<ui:style src="../../../client/resources/css/global.css" type="com.fave100.client.resources.css.GlobalStyle">
		.registerContainer{
			margin: 0px auto;
		}

		.registerContainer h1 {
			text-align: center;
		}
				
		.registerContainer a {
			margin: 5px 0;
		}
		
		.registerForm {
			background-color: #EEE;
			border: 1px solid #AAA;
			padding: 20px;
			border-radius: 5px;
		}
		
		.registerForm input {
			float: right;
			min-width: 60%;
		}
		
		.field {
			width: 100%;
			margin-bottom: 10px;
		}
		
		.statusMessage{
			display: block;
			font-size: 0.75em;
			margin: 5px 0;
			float: left;
		}
		
		.registerButton {
			margin-top: 15px;
			width: 100%;
		}
		
		.thirdPartyLinks, .thirdPartyLinks a {
			width: 100%;
		}
		
		.orDivider{
			padding: 50px;			
			font-size: 2em;
			text-align: center;
		}
		
		.thirdPartyUsernamePrompt {
			margin: 50px auto 0;
			width: 300px;
		}

		#alreadyHaveAccountPrompt {
			clear: both;
			padding-top: 30px;
			text-align: center;
		}			
	</ui:style>

	<ui:with type="com.fave100.client.place.NameTokens" field="nameTokens"/>
	<g:HTMLPanel ui:styleName="wrap">
		<g:HTMLPanel ui:field="topBar"/>
		<div class="container">
			<div class="container">
				<div class="content">		    	
					<g:HTMLPanel ui:field="registerContainer" styleName="{style.registerContainer}">
					    <h1 class="row">Registration</h1>
					    <g:HTMLPanel ui:field="registerWidget"></g:HTMLPanel>
					</g:HTMLPanel>
					
					<g:HTMLPanel ui:field="thirdPartyUsernamePrompt" styleName="{style.thirdPartyUsernamePrompt}">
						<g:FormPanel ui:field="thirdPartyRegisterForm">
							<g:HTMLPanel ui:styleName="registerContainer {style.thirdPartyUsernamePrompt}">
								<span>Please enter a username to complete the registration process</span>
								<g:TextBox ui:field="thirdPartyUsernameField"/>
								<span class="{style.statusMessage} error" ui:field="thirdPartyUsernameStatusMessage"/>					
								<g:SubmitButton ui:field="thirdPartyUsernameSubmitButton">Submit</g:SubmitButton>
							</g:HTMLPanel>
						</g:FormPanel>
					</g:HTMLPanel>
					
					<p id="alreadyHaveAccountPrompt">					   
					    <g:InlineHyperlink targetHistoryToken="{nameTokens.getLogin}">Already have an account? Log in</g:InlineHyperlink>
					</p>
				</div>	
			</div>
		</div>
		<pf:Footer/>
	</g:HTMLPanel>
</ui:UiBinder>
