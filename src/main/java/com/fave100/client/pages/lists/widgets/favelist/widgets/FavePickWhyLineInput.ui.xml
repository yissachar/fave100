<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui">

	<ui:style>	
		.whyLineLabel {
			white-space: pre;
		}
		
		.whyLineLabel:hover {
			border: 3px #ddd dotted;
			cursor: pointer;
			margin: -3px;
		}
		
		.whyLineTextBox {
			margin: -3px;
			width: 100%;
		}
	</ui:style>
	
	<g:FlowPanel>
		<g:Label ui:field="whyLineLabel" ui:styleName="{style.whyLineLabel}"/>
		<g:TextBox ui:field="whyLineTextBox" ui:styleName="{style.whyLineTextBox}" />
	</g:FlowPanel>
	
</ui:UiBinder> 