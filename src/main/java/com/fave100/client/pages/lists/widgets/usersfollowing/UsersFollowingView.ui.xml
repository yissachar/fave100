<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">

<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
	xmlns:g='urn:import:com.google.gwt.user.client.ui'
	ui:generateFormat='com.google.gwt.i18n.rebind.format.PropertiesFormat'
	ui:generateKeys='com.google.gwt.i18n.rebind.keygen.MD5KeyGenerator'
	ui:generateLocales='default'>

	
	<ui:style src="../../../../../client/resources/css/global.css" type="com.fave100.client.pages.lists.widgets.usersfollowing.UsersFollowingView.UsersFollowingStyle">
		
		@def LIST_ITEM_SIZE 35px;
		
		.container {
			margin-top: 15px;
			margin-bottom: 15px;
			width: 100%;
		}
		
		.title {
			margin-bottom: 5px;
		}
		
		.listContainer {
			width: 100%;
			display: block;		
			overflow-y: auto;			
			-webkit-overflow-scrolling: touch;
		}
		
		.nonMobileListContainer {
			max-height: 200px;
		}
		
		.listContainer > div {
			clear: both;
			background-color: #eee;
			overflow: hidden;
			padding-right: 7px;
			@mixin flexbox();
			@mixin justify-content(space-between);
		}
		
		.listContainer > div:hover {
			background-color: #fff;
			cursor: pointer;
		}		
		
		.listContainer > div:hover .deleteButton {
			visibility: visible;
		}
				
		.listContainer img {
			width: LIST_ITEM_SIZE;
			height: LIST_ITEM_SIZE;
			margin-right: 10px;
		}
		
		.listLink {
			padding: 3px;
			line-height: 28px;
			height: LIST_ITEM_SIZE;
			display: inline-block;
		}		
		
		.listLink:hover {
			color: PRIMARY_COLOR;
			text-decoration: none;
		}
		
		.deleteButton {
			line-height: LIST_ITEM_SIZE;
			visibility: hidden;
		}
		
		.deleteButton:hover {
			color: LIST_HIGHLIGHT_COLOR;
		}
		
		.moreFollowingButton {
			margin-top: 15px;
			width: 100%;
		}
	</ui:style>
	
	<g:FlowPanel ui:styleName="{style.container}">
		<g:Label ui:field="followingTitle" ui:styleName="{style.title}">Following:</g:Label>
		<g:FlowPanel ui:field="listContainer" ui:styleName="{style.listContainer}"/>
		<g:Button ui:field="moreFollowingButton" ui:styleName="{style.moreFollowingButton}">More</g:Button>
	</g:FlowPanel>
	
</ui:UiBinder>
