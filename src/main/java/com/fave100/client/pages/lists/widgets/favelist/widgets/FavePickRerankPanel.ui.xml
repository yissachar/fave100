<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui">

	<ui:style src="../../../../../../client/resources/css/global.css" type="com.fave100.client.pages.lists.widgets.favelist.widgets.FavePickRerankPanel.FavePickRerankStyle">
		.container > * {
			display: table-cell;
		}
		
		.container img {
			cursor: pointer;
		}	
		
		.arrowPanel {
			width: 25px;
		}
				
		.deleteButton {
			vertical-align: middle;
		}
	</ui:style>
	
	<ui:with field="img" type="com.fave100.client.resources.img.ImageResources" />
	
	<g:FlowPanel ui:styleName="{style.container}">
	
		<g:FlowPanel ui:styleName="{style.arrowPanel}">
			<g:Image ui:field="upArrow" resource="{img.upArrow}" ui:styleName="rankUpArrow" />
			<g:Image ui:field="downArrow" resource="{img.downArrow}" ui:styleName="rankDownArrow" />
		</g:FlowPanel>
		
		<g:SimplePanel ui:styleName="{style.deleteButton}">
			<g:Image ui:field="deleteButton" resource="{img.delete}" title="Delete song" />
		</g:SimplePanel>
		
	</g:FlowPanel>
	
</ui:UiBinder> 