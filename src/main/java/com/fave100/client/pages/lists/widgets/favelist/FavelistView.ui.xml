<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">

<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
	xmlns:g='urn:import:com.google.gwt.user.client.ui'
	xmlns:c='urn:import:com.google.gwt.user.cellview.client'
	ui:generateFormat='com.google.gwt.i18n.rebind.format.PropertiesFormat'
	ui:generateKeys='com.google.gwt.i18n.rebind.keygen.MD5KeyGenerator'
	ui:generateLocales='default'>

	<ui:style src="../../../../../client/resources/css/global.css" type="com.fave100.client.pages.lists.widgets.favelist.FavelistView.FavelistStyle">
		.faveList {		
			font-size: 1.05em;
		}
		
		.faveList button {
			float: right;
		}
		
		.faveList > div {
			overflow: hidden;
			border: 2px solid #ddd;
			border-top: none;
			background-color: #FFF;	
			padding: 12px 3px;
		}
		
		.faveList > div:first-child {	
			border-top: 2px solid #ddd;
		}
		
		@external rankUpArrow;
		@external rankDownArrow;
		
		.faveList > div:first-child .rankUpArrow, .faveList > div:last-child .rankDownArrow {
			display: none;
		}
		
		.faveList > div > *, .detailsContainer > * {
			display: inline-block;
		}
		
		.detailsContainer {
			margin: 0 15px;
			width: 85%;
		}
		
		.rank, .rankEditor {
			vertical-align: top;
			font-size: 1.3em;
			width: 6%;
			float: left;
		}
		
		.songLink {
			margin-right: 10px;
		}
		
		.whyline {
			display: block;
			width: 100%;				
		}
		
		.personalListItem .whyline {
			min-height: 20px;
			cursor: pointer;
		}
	</ui:style>
	
	<g:FlowPanel>
		<g:FlowPanel ui:field="faveList" ui:styleName="{style.faveList}"/>
		<g:Label ui:field="noItemsMessage">There are no entries for this list.</g:Label>
	</g:FlowPanel>
</ui:UiBinder>
