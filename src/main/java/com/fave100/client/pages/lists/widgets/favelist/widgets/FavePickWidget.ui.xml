<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">

<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
	xmlns:g='urn:import:com.google.gwt.user.client.ui' 
	ui:generateLocales='default'>

	<ui:style src="../../../../../../client/resources/css/global.css" type="com.fave100.client.pages.lists.widgets.favelist.widgets.FavePickWidget.FavePickWidgetStyle">		
		@external hoverHidden;
		
		.mainPanel {
			width:100%;
			@mixin flexbox();
			@mixin align-items(center);
			padding: 12px;
		}
		
		.rankPanel {			
			margin: 3px;
		}
		
		.rank {
			border-radius: 5px;
			color: #fff;
			background-color: TOP_NAV_COLOR;
			display: inline-block;
			font-size: 23px;
			width: 40px;
			height: 40px;
			text-align: center;
			padding: 0px !important;
			line-height: 40px;
		}
				
		.rank > div {
			margin-top: 2px;
		}
				
		.rankThreeDigit {
			font-size: 20px;
		}
				
		.songDetails {
			padding: 0 15px;
			@mixin flex-grow(2);
		}
		
		.songDetails > * {
			float: left;
			clear: both;
		}
		
		.song {
			font-size: 18px;
			cursor: pointer;
		}
				
		.artist {
			font-size: 15px;
			color: HIGHLIGHT_COLOR;
		}
		
		.whyLine {
			font-weight: 11px;
			font-style: italic;
			font-color: #eee;
			font-size: 15px;
			width: 100%;
		}
		
		.hoverPanel {
			display: table;			
			visibility: hidden;
		}
		
		.hoverPanel > * {
			display: table-cell;
			height: 12px;
		}			
		
		.mainPanel:hover .hoverHidden {
			visibility: visible;
		}
		
		
		.hoverPanel i:hover {
			cursor: pointer;
			color: HIGHLIGHT_COLOR;
		}
		
	</ui:style>

	<g:HTMLPanel ui:field="container">	
		<g:FlowPanel ui:styleName="{style.mainPanel}">
		
			<g:SimplePanel>
				<g:SimplePanel ui:field="rankPanel" ui:styleName="{style.rankPanel}"/>
			</g:SimplePanel>

			<g:FlowPanel ui:styleName="{style.songDetails}">
				<g:Anchor ui:field="song" ui:styleName="{style.song}"></g:Anchor>
				<g:InlineLabel ui:field="artist" ui:styleName="{style.artist}"></g:InlineLabel>
				<g:SimplePanel ui:field="whyLinePanel" ui:styleName="{style.whyLine}"></g:SimplePanel>
			</g:FlowPanel>
			
			<g:SimplePanel>
				<g:FlowPanel ui:field="hoverPanel" ui:styleName="hoverHidden {style.hoverPanel}" />
			</g:SimplePanel>
			
		</g:FlowPanel>
	</g:HTMLPanel>

</ui:UiBinder>
