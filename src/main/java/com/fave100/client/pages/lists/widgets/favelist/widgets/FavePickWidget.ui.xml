<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">

<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
	xmlns:g='urn:import:com.google.gwt.user.client.ui' 
	ui:generateLocales='default'>

	<ui:style src="../../../../../../client/resources/css/global.css" type="com.fave100.client.pages.lists.widgets.favelist.widgets.FavePickWidget.FavePickWidgetStyle">
		.mainPanel {
			width:100%;
		}
		
		@external hoverHidden;
		
		.mainPanel:hover .hoverHidden {
			display: block;
		}
		
		.mainPanel tr {
			padding: 10px 0;
		}
		
		.mainPanel td {
			padding: 0 20px 0 0;
		}
		
		.rank {
			border-radius: 99px;
			color: #444;
			border: 3px #444 solid;
			background-color: #fff;
			display: inline-block;
			margin: 3px;
			font-family: arial;
			font-size: 40px;
			width: 62px;
			height: 60px;
			text-align: center;
		}
		
		.rankEditTextBox {
			border-radius: 0px;
			margin: -3px;	
		}
				
		.rank > div {
			margin-top: 2px;
		}
		
		.rankEditPanel:hover {
			border-radius: 0px;
			cursor: pointer;
		}
				
		.rankThreeDigit {
			font-size: 30px;
		}
		
		.rankThreeDigit > div {
			margin-top: 5px;
		}
		
		.song {
			font-size: 25px;
			font-weight: bold;
		}
		
		.artist {
			font-size: 20px;
		}
		
		.whyLine {
			font-weight: 11px;
			font-style: italic;
			font-color: #eee;
		}
				
		.whyLinePanel:hover {
			border: 3px #ddd dotted;
			cursor: pointer;
			margin: -3px;
		}
		
		.whyLinePanelEmpty {
			white-space: pre;
		}
		
		.whyLineTextBox {
			margin: -3px;
			width: 100%;
		}
		
		.hoverPanel td {
			padding: 0px;
		}
		
		.hoverPanel img {
			cursor: pointer;
		}	
	</ui:style>

	<g:HTMLPanel ui:field="container">	
		<g:HorizontalPanel spacing="0" ui:styleName="{style.mainPanel}" verticalAlignment="middle" ui:field="mainPanel">
		
			<g:cell width="10%">
				<g:SimplePanel ui:field="rankPanel" ui:styleName="{style.rank}"></g:SimplePanel>
			</g:cell>

			<g:cell width="80%">
				<g:VerticalPanel width="100%" >
					<g:Anchor ui:field="song" ui:styleName="{style.song}"></g:Anchor>
					<g:InlineLabel ui:field="artist" ui:styleName="{style.artist}"></g:InlineLabel>
					<g:SimplePanel ui:field="whyLinePanel" ui:styleName="{style.whyLine}"></g:SimplePanel>
				</g:VerticalPanel>

			</g:cell>

			<g:HorizontalPanel ui:field="hoverPanel" ui:styleName="hoverHidden {style.hoverPanel}" verticalAlignment="middle"/>
			
		</g:HorizontalPanel>
	</g:HTMLPanel>

</ui:UiBinder>
