<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">

<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
	xmlns:g='urn:import:com.google.gwt.user.client.ui' 
	ui:generateLocales='default'>

	<ui:style src="../../../../../../client/resources/css/global.css" type="com.fave100.client.pages.lists.widgets.favelist.widgets.FavePickWidget.FavePickWidgetStyle">
		.mainPanel {
			width:100%;
			display: table;
			padding: 12px 3px;
		}
		
		.mainPanel > * {
			display: table-cell;
		}
		
		@external hoverHidden;
		
		.mainPanel:hover .hoverHidden {
			display: table;
		}
		
		.rankContainer {
			width: 7%;
			display: table-cell;
			vertical-align: middle;
		}
		
		.rankPanel {			
			margin: 3px;
			height: 67px;
		}
		
		.rank {
			border-radius: 99px;
			color: #444;
			border: 2px #444 solid !important;
			background-color: #fff;
			display: inline-block;
			font-size: 30px;
			width: 62px;
			height: 60px;
			text-align: center;
			padding: 0px !important;
			line-height: 50px;
		}
				
		.rank > div {
			margin-top: 2px;
		}
				
		.rankThreeDigit {
			font-size: 28px;
		}
				
		.songDetails {
			width: 81%;
			display: table-cell;
			padding: 0 15px;
		}
		
		.songDetails > * {
			float: left;
			clear: both;
		}
		
		.song {
			font-size: 19px;
			cursor: pointer;
		}
		
		.song:hover {
			color: HIGHLIGHT_COLOR;
			text-decoration: none;
		}
		
		.artist {
			font-size: 17px;
			color: #777;
		}
		
		.whyLine {
			font-weight: 11px;
			font-style: italic;
			font-color: #eee;
			font-size: 15px;
			width: 100%;
		}
		
		.hoverPanelContainer {
			width: 10%;
			vertical-align: middle;
		}
		
		.hoverPanel > * {
			display: table-cell;
		}
		
		.hoverPanel img, .hoverPanel i {
			cursor: pointer;
		}			
		
	</ui:style>

	<g:HTMLPanel ui:field="container">	
		<g:FlowPanel ui:styleName="{style.mainPanel}">
		
			<g:SimplePanel ui:styleName="{style.rankContainer}">
				<g:SimplePanel ui:field="rankPanel" ui:styleName="{style.rankPanel}"/>
			</g:SimplePanel>

			<g:FlowPanel ui:styleName="{style.songDetails}">
				<g:Anchor ui:field="song" ui:styleName="{style.song}"></g:Anchor>
				<g:InlineLabel ui:field="artist" ui:styleName="{style.artist}"></g:InlineLabel>
				<g:SimplePanel ui:field="whyLinePanel" ui:styleName="{style.whyLine}"></g:SimplePanel>
			</g:FlowPanel>
			
			<g:SimplePanel ui:styleName="{style.hoverPanelContainer}">
				<g:FlowPanel ui:field="hoverPanel" ui:styleName="hoverHidden {style.hoverPanel}" />
			</g:SimplePanel>
			
		</g:FlowPanel>
	</g:HTMLPanel>

</ui:UiBinder>
