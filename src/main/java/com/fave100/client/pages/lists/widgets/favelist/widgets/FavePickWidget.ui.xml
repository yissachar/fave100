<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">

<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
	xmlns:g='urn:import:com.google.gwt.user.client.ui' 
	ui:generateLocales='default'>

	<ui:style src="../../../../../../client/resources/css/global.css" type="com.fave100.client.pages.lists.widgets.favelist.widgets.FavePickWidget.FavePickWidgetStyle">
		.mainPanel {
			width:100%;
			display: table;
		}
		
		.mainPanel > * {
			display: table-cell;
		}
		
		@external hoverHidden;
		
		.mainPanel:hover .hoverHidden {
			display: table;
		}
		
		.rankContainer {
			width: 7%;
			display: table-cell;
			vertical-align: middle;
		}
		
		.rank {
			border-radius: 99px;
			color: #444;
			border: 3px #444 solid;
			background-color: #fff;
			display: inline-block;
			margin: 3px;
			font-family: arial;
			font-size: 40px;
			width: 62px;
			height: 60px;
			text-align: center;
		}
		
		.rankEditTextBox {
			border-radius: 0px;
			margin: -3px;	
		}
				
		.rank > div {
			margin-top: 2px;
		}
		
		.rankEditPanel:hover {
			border-radius: 0px;
			cursor: pointer;
		}
				
		.rankThreeDigit {
			font-size: 30px;
		}
		
		.rankThreeDigit > div {
			margin-top: 5px;
		}
		
		.songDetails {
			width: 81%;
			display: table-cell;
			padding: 0 15px;
		}
		
		.songDetails > * {
			float: left;
			clear: both;
		}
		
		.song {
			font-size: 25px;
			font-weight: bold;
		}
		
		.artist {
			font-size: 20px;
		}
		
		.whyLine {
			font-weight: 11px;
			font-style: italic;
			font-color: #eee;
			width: 100%;
		}
				
		.whyLinePanel:hover {
			border: 3px #ddd dotted;
			cursor: pointer;
			margin: -3px;
		}
		
		.whyLinePanelEmpty {
			white-space: pre;
		}
		
		.whyLineTextBox {
			margin: -3px;
			width: 100%;
		}
		
		.hoverPanelContainer {
			width: 10%;
			vertical-align: middle;
		}
		
		.hoverPanel > * {
			display: table-cell;
		}
		
		.hoverPanel img {
			cursor: pointer;
		}	
		
		.hoverPanelDeleteButton {
			vertical-align: middle;
		}
		
		.arrowPanel {
			width: 25px;
		}
	</ui:style>

	<g:HTMLPanel ui:field="container">	
		<g:FlowPanel ui:styleName="{style.mainPanel}" ui:field="mainPanel">
		
			<g:SimplePanel ui:styleName="{style.rankContainer}">
				<g:SimplePanel ui:field="rankPanel" ui:styleName="{style.rank}"></g:SimplePanel>
			</g:SimplePanel>

			<g:FlowPanel ui:styleName="{style.songDetails}">
				<g:Anchor ui:field="song" ui:styleName="{style.song}"></g:Anchor>
				<g:InlineLabel ui:field="artist" ui:styleName="{style.artist}"></g:InlineLabel>
				<g:SimplePanel ui:field="whyLinePanel" ui:styleName="{style.whyLine}"></g:SimplePanel>
			</g:FlowPanel>
			
			<g:SimplePanel ui:styleName="{style.hoverPanelContainer}">
				<g:FlowPanel ui:field="hoverPanel" ui:styleName="hoverHidden {style.hoverPanel}" />
			</g:SimplePanel>
			
		</g:FlowPanel>
	</g:HTMLPanel>

</ui:UiBinder>
