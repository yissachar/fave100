<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">

<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
	xmlns:g='urn:import:com.google.gwt.user.client.ui'>

	<ui:style src="../../../../../client/resources/css/global.css" type="com.fave100.client.pages.lists.widgets.globallistdetails.GlobalListDetailsView.Style">
		.smallDisplay .container {
			padding: 10px;
		}
		
		.hashtagLabel {
			text-overflow: ellipsis;
			display: inline-block;
			overflow: hidden;
		}		
		
		.contributeCTA {
			display: block;
			cursor: pointer;
			margin-bottom: 20px;
		}
		
		.trendingHeader {
			margin-top: 25px;
			margin-bottom: 5px;
			font-size: 1.1em;
		}
		
		.trendingList {
			line-height: 20px;
			margin-bottom: 30px;
		}
				
		.trendingList a {
			clear: both;
			padding: 5px;
			float: left;
			width: 100%;
			color: LIST_HIGHLIGHT_COLOR;
			font-size: 18px;
			-webkit-transition: font-size 0.7s, padding 0.7s;
			transition: font-size 0.7s, padding 0.7s;
		}
		
		.trendingList a:hover {
			padding: 8px;
			font-size: 22px;
			text-decoration: none;
			color: HIGHLIGHT_COLOR;
			background-color: PRIMARY_COLOR;
		}
		
		.smallDisplay .trendingList a {
			display: inline-block;
			margin-right: 5px;
		}
		
		.viewAllLink {
			float: left;
			margin-top: 15px;
			margin-bottom: 20px;
		}
	</ui:style>
	
	<ui:with type="com.fave100.shared.place.NameTokens" field="nameTokens"/>
	
	<g:FlowPanel ui:field="container" ui:styleName="{style.container}">
		<g:Label ui:field="hashtagLabel" ui:styleName="{style.hashtagLabel}"/>
		<g:Anchor ui:field="contributeCTA" ui:styleName="{style.contributeCTA}">Contribute to this list</g:Anchor>
		<g:Label ui:styleName="{style.trendingHeader}">Featured Lists</g:Label>
		<g:FlowPanel ui:field="trendingLists" ui:styleName="{style.trendingList}" />
		<g:Hyperlink targetHistoryToken="{nameTokens.getAlllists}" ui:styleName="{style.viewAllLink}">View all lists</g:Hyperlink>
	</g:FlowPanel>
</ui:UiBinder>
