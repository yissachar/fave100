<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">

<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
	xmlns:g='urn:import:com.google.gwt.user.client.ui'
	xmlns:p='urn:import:com.fave100.client.pages'
	xmlns:pf='urn:import:com.fave100.client.pagefragments.footer'
	ui:generateFormat='com.google.gwt.i18n.rebind.format.PropertiesFormat'
	ui:generateKeys='com.google.gwt.i18n.rebind.keygen.MD5KeyGenerator'
	ui:generateLocales='default'>

	<ui:style src="../../../client/resources/css/global.css" type="com.fave100.client.pages.lists.ListView.ListStyle">
		.tagline {
			font-size: 18px;
			margin-bottom: 10px;
			text-align: center;
		}
		
		.taglineCTA {
			font-weight: bold;
		}
		
		.taglineLinks {
			font-size: 16px;
			margin-top: 10px;
			margin-bottom: 20px;
		}
		
		.taglineLinks > * {	
			margin: 0 5px;
		}
		
		.taglineLinks a {
			cursor: pointer;
		}
				
		.userProfile{
			display: block;
			width: 100%;			
			overflow: hidden;
			border: 1px solid #999;			
			background-color: #fff;
			padding: 5px;
			color: PRIMARY_COLOR;
		}
		
		.userDetails {
			float: left;
		}
		
		.avatar {
			float: left;
			margin-right: 8px;
			width: 80px;
			height: 80px;
		}
		
		.username {	
			color: PRIMARY_COLOR;
			display: block;
			width: 139px;
			font-size: 1.4em;
			vertical-align: top;
			word-wrap: break-word;
			font-weight: bold;
		}
		
		.followCTAcontainer {
			margin-top: 20px;			
		}
		
		.followButton {
			width: 65%;
			display: block;
			margin: 0 auto;
			text-align: center;
		}
				
		.songSearchContainer {			
			display: block;
			margin: 0 auto;
			margin-bottom: 20px;
			width: 80%;
			overflow: hidden;
		}
		
		.fixedSearch {
			position: fixed;
			width: 608px;
			margin-top: -26px;
			box-shadow: 0 0 8px #666;
		}
		
		.responsiveUserTabOptions {
			width: 100%;
			background-color: #f0f0f0;
			margin-bottom: 15px;
		}
		
		.responsiveUserTabOptions > span {
			width: 50%;
			display: inline-block;
			text-align: center;
			font-size: 1.3em;
			padding: 5px;
			background-color: PRIMARY_COLOR;
			color: #fff;
			border-right: 1px solid #fff;
		}
		
		.responsiveUserTabOptions > span:last-child {
			border-right: 0px;
		}		
		
		.responsiveUserTabOptions > span:hover {
			background-color: #fff;
			color: PRIMARY_COLOR;
			cursor: pointer;
		}
				
		.responsiveUserTabOptions .selected {
			background-color: #fff;
			color: PRIMARY_COLOR;
		}
		
		.faveListContainer {
			min-height: 500px;
			-webkit-overflow-scrolling: touch;
		}		
	</ui:style>
	
	<ui:with type="com.fave100.client.resources.img.ImageResources" field="img"/>
	<ui:with type="com.fave100.client.place.NameTokens" field="nameTokens"/>
	
	<p:Page ui:field="page">
		<p:content>
			<g:FlowPanel>
			
				<g:HTMLPanel ui:field="userContainer">
					
					<g:HTMLPanel ui:field="userPageSideBar" styleName="userPageSideBar col span_3">
						<g:HTMLPanel ui:field="globalListDetailsContainer"/>								
						<g:FlowPanel ui:field="userProfile" styleName="{style.userProfile}">
							<g:Image styleName="{style.avatar}" ui:field="avatar"/>
							<g:FlowPanel styleName="{style.userDetails}">
								<g:InlineLabel ui:styleName="{style.username}" ui:field="username"/>
								<g:InlineHyperlink targetHistoryToken="{nameTokens.getProfile}"  ui:styleName="{style.username}"  ui:field="profileLink"/>
								<!--  Follow button -->
								<g:FocusPanel ui:field="followCTAcontainer" ui:styleName="{style.followCTAcontainer}">									
									<g:InlineLabel ui:field="followCTA" ui:styleName="button {style.followButton}"/>
								</g:FocusPanel>							
							</g:FlowPanel>				
						</g:FlowPanel>
						
						<g:FlowPanel ui:styleName="responsiveUserTabOptions {style.responsiveUserTabOptions}">
							<g:InlineLabel ui:field="mobileShowList">List</g:InlineLabel>							
							<g:InlineLabel ui:field="mobileShowFollowing">Following</g:InlineLabel>
						</g:FlowPanel>
						
						<g:HTMLPanel ui:field="listManager"/>
						<g:HTMLPanel ui:field="followingContainer"/>
						
					</g:HTMLPanel>
					
					<g:HTMLPanel ui:field="userPageFaveList" ui:styleName="userPageFaveList col span_9">
						<g:FlowPanel ui:field="tagline" ui:styleName="{style.tagline}">
							<g:Label ui:styleName="{style.taglineCTA}">Share your favorite songs.</g:Label>
							<g:FlowPanel ui:styleName="{style.taglineLinks}">
								<g:Anchor ui:field="registerLink">Register Now</g:Anchor>
								<g:InlineLabel> - </g:InlineLabel>
								<g:InlineHyperlink targetHistoryToken="{nameTokens.getAbout}">Why Fave100?</g:InlineHyperlink>
								<g:InlineLabel> - </g:InlineLabel>
								<g:InlineHyperlink targetHistoryToken="{nameTokens.getTour}">Take a Tour</g:InlineHyperlink>
							</g:FlowPanel>
						</g:FlowPanel>
							
						<g:HTMLPanel ui:field="songAutocomplete" ui:styleName="{style.songSearchContainer}"/>	
						<g:HTMLPanel ui:field="faveListContainer" styleName="{style.faveListContainer}">
							<g:HTMLPanel ui:field="favelist"/>									
						</g:HTMLPanel>						
					</g:HTMLPanel>
					
				</g:HTMLPanel>
				<g:Label ui:field="userNotFound">That user does not exist.</g:Label>
				
			</g:FlowPanel>
		</p:content>
	</p:Page>
	
</ui:UiBinder>
