<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">

<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
	xmlns:g='urn:import:com.google.gwt.user.client.ui'
	xmlns:p='urn:import:com.fave100.client.pages'
	xmlns:pf='urn:import:com.fave100.client.pagefragments.footer'>

	<ui:style src="../../../client/resources/css/global.css" type="com.fave100.client.pages.lists.ListView.ListStyle">
		.userPageSideBar {
			background-color: MAIN_BACKGROUND;
			padding-top: 10px;
			padding-left: 10px;
			padding-right: 15px;
			width: 19%;
			position: fixed;
			left: 0;
			margin-left: 0;
			overflow-y: auto;
			transition: left RESIZE_TRANSITION_TIME;
			-webkit-transition: left RESIZE_TRANSITION_TIME;
		}
		
		.smallDisplay .userPageSideBar, .mediumDisplay .userPageSideBar {
			width: 200px;
			left: -200px;
		}
				
		.smallDisplay .hoverSideBar .userPageSideBar, .mediumDisplay .hoverSideBar .userPageSideBar {
			left: 0;
			box-shadow: 1px 1px 5px 1px #777;
		}	
		
		.userPageFaveList {
			transition: margin-left RESIZE_TRANSITION_TIME;
			-webkit-transition: margin-left RESIZE_TRANSITION_TIME;
		}
		
		.smallDisplay .userPageFaveList, .mediumDisplay .userPageFaveList {
			margin-left: 0;
		}
		
		.largeDisplay .userPageFaveList {
			width: 73%;
			margin-left: 27%;
		}
	
		.tagline {
			font-size: 18px;
			padding-top: 15px;
			padding-bottom: 10px;
			text-align: center;			
		}
		
		.taglineCTA {
			font-size: 22px;
		}
		
		.taglineLinks {
			font-size: 16px;
			margin-top: 10px;
			margin-bottom: 20px;
		}
		
		.taglineLinks > * {	
			margin: 0 5px;
		}
		
		.taglineLinks a {
			cursor: pointer;
		}
				
		.userProfile {
			display: block;
			width: 100%;			
			overflow: hidden;		
			padding: 5px;
			color: PRIMARY_COLOR;
		}
		
		.avatar {
			display: block;
			margin: 0 auto;
			width: 80px;
			height: 80px;
			border-radius: 8px;
		}
		
		.username {	
			color: PRIMARY_COLOR;
			display: block;
			width: 100%;
			margin-top: 10px;
			text-align: center;
			font-size: 1.4em;
			vertical-align: top;
			word-wrap: break-word;
		}
		
		.userDetails {
			max-width: 250px;
			margin: 0 auto;
		}
		
		.followCTAcontainer {
			margin-top: 20px;			
		}
		
		.followButton {
			width: 85%;
			display: block;
			margin: 0 auto;
			text-align: center;
		}
		.fixedSearch {
			position: fixed;
			width: 608px;
			margin-top: -26px;
			box-shadow: 0 0 8px #666;
		}
		
		.faveListContainer {
			min-height: 500px;
			-webkit-overflow-scrolling: touch;
		}		
	</ui:style>
	
	<ui:with type="com.fave100.client.resources.img.ImageResources" field="img"/>
	<ui:with type="com.fave100.shared.place.NameTokens" field="nameTokens"/>
	
	<p:Page ui:field="page">
		<p:content>
			<g:FlowPanel>
			
				<g:HTMLPanel ui:field="userContainer">
					
					<g:HTMLPanel ui:field="userPageSideBar" styleName="{style.userPageSideBar}">
						<g:HTMLPanel ui:field="globalListDetailsContainer"/>								
						<g:FlowPanel ui:field="userProfile" styleName="{style.userProfile}">
							<g:Image styleName="{style.avatar}" ui:field="avatar"/>
							<g:FlowPanel>
								<g:Label ui:styleName="{style.username}" ui:field="username"/>
								<g:Hyperlink targetHistoryToken="{nameTokens.getProfile}"  ui:styleName="{style.username}"  ui:field="profileLink"/>
								<!--  Follow button -->
								<g:FocusPanel ui:field="followCTAcontainer" ui:styleName="{style.followCTAcontainer}">									
									<g:InlineLabel ui:field="followCTA" ui:styleName="button {style.followButton}"/>
								</g:FocusPanel>							
							</g:FlowPanel>				
						</g:FlowPanel>
						
						<g:FlowPanel ui:styleName="{style.userDetails}">
							<g:HTMLPanel ui:field="listManager"/>
							<g:HTMLPanel ui:field="followingContainer"/>
						</g:FlowPanel>
						
					</g:HTMLPanel>
					
					<g:HTMLPanel ui:field="userPageFaveList" ui:styleName="{style.userPageFaveList}">
						<g:FlowPanel ui:field="tagline" ui:styleName="{style.tagline}">
							<g:Label ui:styleName="{style.taglineCTA}">Share your favorite songs.</g:Label>
							<g:FlowPanel ui:styleName="{style.taglineLinks}">
								<g:Anchor ui:field="registerLink">Register Now</g:Anchor>
								<g:InlineLabel> - </g:InlineLabel>
								<g:InlineHyperlink targetHistoryToken="{nameTokens.getAbout}">Why Fave100?</g:InlineHyperlink>
								<g:InlineLabel> - </g:InlineLabel>
								<g:InlineHyperlink targetHistoryToken="{nameTokens.getTour}">Take a Tour</g:InlineHyperlink>
							</g:FlowPanel>
						</g:FlowPanel>
							
						<g:HTMLPanel ui:field="faveListContainer" styleName="{style.faveListContainer}">
							<g:HTMLPanel ui:field="favelist"/>									
						</g:HTMLPanel>						
					</g:HTMLPanel>
					
				</g:HTMLPanel>
				<g:Label ui:field="userNotFound">That user does not exist.</g:Label>
				
			</g:FlowPanel>
		</p:content>
	</p:Page>
	
</ui:UiBinder>
