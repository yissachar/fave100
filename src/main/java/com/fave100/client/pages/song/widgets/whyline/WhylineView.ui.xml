<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'>
             
	<ui:style src="../../../../../client/resources/css/global.css" type="com.fave100.client.resources.css.GlobalStyle">    	
    	.tabTitle {
			font-weight: bold;
			margin-bottom: 5px;
		}
    	
    	.whylines {
			margin-top: 20px;
    	}
    			
		.userListsPanel > div {
			display: inline;
		}
    </ui:style>
    
    <g:FlowPanel>
        
    	<g:FlowPanel ui:field="userListsContainer">
    		<g:Label ui:styleName="{style.tabTitle}">In these lists</g:Label>    	
    		<g:FlowPanel ui:styleName="{style.userListsPanel}" ui:field="userListsPanel"></g:FlowPanel>	
    	</g:FlowPanel>
    	
    	<g:FlowPanel ui:field="whylineContainer" ui:styleName="{style.whylines}">
    		<g:Label ui:styleName="{style.tabTitle}">Why-Lines</g:Label>
    		<g:FlowPanel ui:field="whylinePanel"></g:FlowPanel>
    	</g:FlowPanel>
    		
    </g:FlowPanel>
</ui:UiBinder>
