<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">

<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
	xmlns:g='urn:import:com.google.gwt.user.client.ui'>

	<ui:style src="../../../../../client/resources/css/global.css" type="com.fave100.client.resources.css.GlobalStyle">
		.ytcontainer {
			position: relative;     
			padding-bottom: 56.25%;
			padding-top: 30px;
			height: 0;
			overflow: hidden;
		}
		
		.ytcontainer iframe, .ytcontainer object, .ytcontainer embed {
			position: absolute;
			top: 0;
			left: 0;
			width: 100%;
			height: 100%;
		}
		
		.thumbnailPanel {
			padding: 10px;
		}
		
		.thumbnailPanel img {
			margin-top: 5px;
			margin-right: 2%;
			cursor: pointer;
			border: 1px solid #555;
			width: 22%;
		}
		
		.thumbnailPanel img:first-child {
			margin-left: 3%;
		}
		
		.thumbnailPanel img:last-child {
			margin-right: 0;
		}
		
		.thumbnailPanel img:hover{
			border: 1px solid #999;
		}
	</ui:style>
	
	<g:HTMLPanel>
		<div id="ytcontainer" class="{style.ytcontainer}">
			<div id="ytplayer">Loading...</div>
		</div>
		<g:Label ui:field="errorMessage">Error: Could not load video</g:Label>
		<g:SimplePanel ui:field="framePanel"></g:SimplePanel>
		<g:HTMLPanel ui:field="thumbnailPanel" ui:styleName="{style.thumbnailPanel}"/>
	</g:HTMLPanel>
	
</ui:UiBinder>
