<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	
	<ui:style src="../../../../../../client/resources/css/global.css" type="com.fave100.client.resources.css.GlobalStyle">
		@def HOVER_BORDER 1px solid #ddd;
		
		.container {
			position: relative;
			display: inline;
		}
		
		.avatar {
			border-radius: 50%;
		}
		
		.details {
		    background-color: #fff;
		    border: HOVER_BORDER;
		    border-radius: 3px;
		    width: 160px;
		    box-shadow: 0 0 4px #bbb;
		    margin: 0 auto;
		    position: absolute;
		    top: -50%;
		    left: -65px;
		    display: none;
		    padding: 10px;
			z-index: 10000;		
		}
		
		.details:after {
		    content: '';
		    position: absolute;
		    bottom: -6px;
		    width: 10px;
		    height: 10px;
		    border-bottom: HOVER_BORDER;
		    border-right: HOVER_BORDER;
		    background-color: #f8f8f8;
		    left: 50%;
		    margin-left: -5px;
		    -moz-transform: rotate(45deg);
		    -webkit-transform: rotate(45deg);
		    transform: rotate(45deg);
		}
		
		.container:hover .details {
		    display: block;
		}
	</ui:style>
	
	<g:HTMLPanel >
		<g:HTMLPanel ui:styleName="{style.container}">
			<g:Image ui:field="avatarImage" ui:styleName="{style.avatar}"/>		
			<g:FlowPanel ui:field="details" ui:styleName="{style.details}">		
				<g:Label ui:field="userNameLabel"/>
				<g:FlowPanel ui:field="listContainer"/>
			</g:FlowPanel>
		</g:HTMLPanel>
	</g:HTMLPanel>
</ui:UiBinder> 