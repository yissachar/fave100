<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
		.lightBoxContainer {
			position: fixed;
			width: 100%;
			top: 15%;
			left: 0;
			z-index: 100000;
		}
				
		.lightBoxBackground {
			position: fixed;
			top: 0;
			left: -25%;
			width: 125%;
			height: 100%;
			opacity: .40;
			background-color: #000;
			z-index: 99999; 
		}
		
		.lightBox {
			background: #FFF;
			border: 1px solid #555;
			position: relative;
			margin: 0 auto;
			min-width: 250px;
			max-width: 800px;
			z-index: 100000;
			overflow: hidden;
		}
	</ui:style>
	
   	<g:HTMLPanel styleName="{style.lightBoxContainer}">
		<g:FocusPanel ui:field="lightBoxBackground" styleName="{style.lightBoxBackground}"/>			
		<g:HTMLPanel ui:field="content" styleName="{style.lightBox}"/>
	</g:HTMLPanel>
	
</ui:UiBinder> 