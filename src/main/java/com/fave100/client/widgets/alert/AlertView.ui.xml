<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:w="urn:import:com.fave100.client.widgets.lightbox">
    <ui:style>			
		.content {
			padding: 8px;
			background-color: #fff;
			height: 100%;
		}
		
		.content button {			
			width: 30%;
			margin: 10px;
			margin-left: 45px;
		}
    </ui:style>
    
    <w:LightBox>
    	<w:content width="35%" height="100%">
			<g:FlowPanel ui:styleName="{style.content}">
				<g:Label>Are you sure you want to delete this list? This action cannot be undone.</g:Label>
				<g:Button ui:field="okButton">OK</g:Button>
				<g:Button ui:field="cancelButton">Cancel</g:Button>
			</g:FlowPanel>				
		</w:content>
	</w:LightBox>
</ui:UiBinder>
