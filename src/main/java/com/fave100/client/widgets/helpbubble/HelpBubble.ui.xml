<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:w="urn:import:com.fave100.client.widgets">
	
	<ui:style src="../../../client/resources/css/global.css" type="com.fave100.client.resources.css.GlobalStyle">
		@def BORDER_COLOR #aaa;
		@def ARROW_SIZE 9px;
				
		.container {
			position: absolute;
			width: inherit;
			font-size: 15px;
		}
		
		.arrow {
			top: 1px;
			left: 50%;
			position: absolute;
		}
		
		.arrow:after, .arrow:before {
			position: absolute;
			bottom: 100%;
			border: solid transparent;
			content: " ";
			height: 0;
			width: 0;
			pointer-events: none;
		}
		
		.arrow:after {
			border-color: transparent;
			border-bottom-color: #fff;
			border-width: ARROW_SIZE;
			margin-left: sub(0px, ARROW_SIZE);
		}
		
		.arrow:before {
			border-color: transparent;
			border-bottom-color: BORDER_COLOR;
			border-width: add(ARROW_SIZE, 2px);
			margin-left: sub(0px, add(ARROW_SIZE, 2px));
		}
		
		.helpContainer {
			border: 1px solid BORDER_COLOR;
			border-radius: 4px;			
			background-color: #FFF;
			padding: 6px;
			box-shadow: 0 0 6px 1px BORDER_COLOR;
			overflow: none;
		}
				
		.closeButton {
			position: absolute;
			right: 0;
			top: 0;
			padding: 6px;
			cursor: pointer;
			color: #777;
		}
		
		.closeButton:hover {
			color: PRIMARY_COLOR;
		}
		
		.helpText {		
			padding: 5px 0;
		}
	</ui:style>
	
	<g:HTMLPanel>
		<g:FocusPanel ui:field="container" ui:styleName="{style.container}">
			<g:FlowPanel ui:styleName="{style.helpContainer}">
				<g:HTMLPanel ui:field="arrow" ui:styleName="{style.arrow}" />			
				<w:Icon ui:field="closeButton" ui:styleName="fa fa-times {style.closeButton}"/>
				<g:Label ui:field="helpText" ui:styleName="{style.helpText}"/>
			</g:FlowPanel>
		</g:FocusPanel>
	</g:HTMLPanel>
	
</ui:UiBinder> 