<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">

<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
	xmlns:g='urn:import:com.google.gwt.user.client.ui'
	xmlns:w='urn:import:com.fave100.client.widgets.lightbox'>

	<ui:style src="../../../../client/resources/css/global.css" type="com.fave100.client.resources.css.GlobalStyle">	
		.title {
			color: HIGH_LEGIBILITY_BLUE;
			padding: 5px;
			font-size: 22px;
		}
		
		.innerLoginBox {
			padding: 15px;
		}
		
		.registerLinkContainer {
			padding: 10px;
			text-align: center;
			background-color: #f8f9fb;
			border-top: 1px solid #e4ebf0;
		}
		
		.registerLinkContainer a {
			color: #44789b;
			text-shadow: 0 1px 0 #ffffff;
		}
	</ui:style>
	
	<ui:with type="com.fave100.shared.place.NameTokens" field="nameTokens" />
	<ui:with field="img" type="com.fave100.client.resources.img.ImageResources" />
			
	<w:LightBox>
		<w:content width="400px" height="100%">	
			<g:HTMLPanel>
				<g:Label ui:styleName="{style.title}">Log in</g:Label>
				<g:HTMLPanel ui:field="loginContainer" ui:styleName="{style.innerLoginBox}"/>
				<g:SimplePanel ui:styleName="{style.registerLinkContainer}">
					<g:InlineHyperlink targetHistoryToken="{nameTokens.getRegister}">
						Don't have an account? Register
					</g:InlineHyperlink>
				</g:SimplePanel>
			</g:HTMLPanel>
			</w:content>
	</w:LightBox>
	
</ui:UiBinder>
