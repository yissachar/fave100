<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">

<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
	xmlns:g='urn:import:com.google.gwt.user.client.ui'
	xmlns:w='urn:import:com.fave100.client.widgets.lightbox'>

	<ui:style src="../../../../client/resources/css/global.css" type="com.fave100.client.resources.css.GlobalStyle">
	
		.header {
			display: block;
			background-color: PRIMARY_COLOR;
			padding: 6px 0;
			border-bottom: 1px solid #555;
		}
		
		.header img {
			display: block;
			margin: 0 auto;
		}
		
		.innerLoginBox {
			padding: 15px;
		}
		
		.noAccountPrompt {
			padding: 5px;
			margin-left: 33%;
		}		
		
	</ui:style>
	
	<ui:with type="com.fave100.client.place.NameTokens" field="nameTokens" />
	<ui:with field="img" type="com.fave100.client.resources.img.ImageResources" />
			
	<w:LightBox>
		<w:content width="50%" height="100%">	
			<g:HTMLPanel>
				<g:SimplePanel ui:styleName="{style.header}">
					<g:Image resource="{img.logo}"/>
				</g:SimplePanel>
				<g:HTMLPanel ui:field="loginContainer" ui:styleName="{style.innerLoginBox}"/>
				<g:InlineHyperlink targetHistoryToken="{nameTokens.getRegister}" ui:styleName="{style.noAccountPrompt}">
					Don't have an account? Register
				</g:InlineHyperlink>
			</g:HTMLPanel>
			</w:content>
	</w:LightBox>
	
</ui:UiBinder>
