<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
			 xmlns:w='urn:import:com.fave100.client.widgets.lightbox'>
			
    <ui:style src="../../../../client/resources/css/global.css" type="com.fave100.client.resources.css.GlobalStyle">
	
		.header {
			display: block;
			background-color: TOP_NAV_COLOR;
			padding: 6px 0;
			border-bottom: 1px solid #555;
		}
		
		.title {
			color: #fff;
			text-align: center;
			padding: 5px;
			font-size: 22px;
		}
		
		.innerRegisterBox {
			padding: 15px;
		}
		
		.loginLinkContainer {
			padding: 10px;
			text-align: center;
		}		
		
	</ui:style>
	
	<ui:with type="com.fave100.shared.place.NameTokens" field="nameTokens" />
	<ui:with field="img" type="com.fave100.client.resources.img.ImageResources" />
    
    <w:LightBox>
		<w:content width="70%" height="100%">	
			<g:HTMLPanel>
				<g:SimplePanel ui:styleName="{style.header}">
					<g:Label ui:styleName="{style.title}">Register</g:Label>
				</g:SimplePanel>
				<g:HTMLPanel ui:field="registerContainer" ui:styleName="{style.innerRegisterBox}"/>
				<g:SimplePanel ui:styleName="{style.loginLinkContainer}">
					<g:InlineHyperlink targetHistoryToken="{nameTokens.getLogin}">
						Already have an account? Login
					</g:InlineHyperlink>
				</g:SimplePanel>
			</g:HTMLPanel>
			</w:content>
	</w:LightBox>
</ui:UiBinder>
