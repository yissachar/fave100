<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">

<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
	xmlns:g='urn:import:com.google.gwt.user.client.ui'
	xmlns:my='urn:import:com.fave100.client.widgets'
	ui:generateFormat='com.google.gwt.i18n.rebind.format.PropertiesFormat'
	ui:generateKeys='com.google.gwt.i18n.rebind.keygen.MD5KeyGenerator'
	ui:generateLocales='default'>
	
	<ui:style>		
		.registerForm {
			background-color: #EEE;
			border: 1px solid #AAA;
			padding: 20px;
			border-radius: 5px;
		}
		
		.nativeRegisterForm div{
			float: left;
		}
		
		.nativeRegisterForm input {
			float: right;
			min-width: 60%;
		}
		
		.field {
			width: 100%;
			margin-bottom: 10px;
		}
		
		.statusMessage {
			display: block;
			font-size: 0.75em;
			margin: 5px 0;
			float: left;
		}
		
		.registerButton {
			margin-top: 15px;
			width: 100%;
		}
		
		.thirdPartyLinks {
			font-size: 80%;
		}
		
		.thirdPartyLinks, .thirdPartyLinks > * {
			margin: 5px 0;
			width: 100%;	
			clear: both;		
		}
	</ui:style>
	
	<ui:with type="com.fave100.client.resources.img.ImageResources" field="img"/>

	<g:HTMLPanel ui:styleName="row">
		<g:FormPanel ui:field="registerForm" ui:styleName="col span_5">				
			<g:HTMLPanel styleName="{style.registerForm} {style.nativeRegisterForm}">	
				<div class="{style.field}">				
					<g:Label>Username</g:Label>					
					<my:FaveTextBox ui:field="usernameField"/>
					<span class="{style.statusMessage} error" ui:field="usernameStatusMessage"/>
				</div>
				<div class="{style.field}">
					<g:Label>Email</g:Label>					
					<my:FaveTextBox ui:field="emailField"/>
					<span class="{style.statusMessage} error" ui:field="emailStatusMessage"/>
				</div>
				<div class="{style.field}">
					<g:Label>Password</g:Label>
					<g:PasswordTextBox ui:field="passwordField" />
				</div>
				<div class="{style.field}">
					<g:Label>Confirm password</g:Label>
					<g:PasswordTextBox ui:field="passwordRepeatField" />
					<span class="{style.statusMessage} error" ui:field="passwordStatusMessage"/>
				</div>
				<g:SubmitButton ui:field="registerButton" ui:styleName="{style.registerButton}">
					Register
				</g:SubmitButton>					
			</g:HTMLPanel>
		</g:FormPanel>	
		<div class="loginDivider col span_2">or</div>				
		<div class="{style.registerForm} col span_5">		
			<div class="{style.thirdPartyLinks}">	
				<my:SocialButton ui:field="registerWithGoogleButton" img="{img.gPlusIcon}" text="Register with Google" style="googleSocialLogo"></my:SocialButton>
				<my:SocialButton ui:field="registerWithTwitterButton" img="{img.twitterLogo}" text="Register with Twitter" style="twitterSocialLogo"></my:SocialButton>
				<my:SocialButton ui:field="registerWithFacebookButton" img="{img.fbLogo}" text="Register with Facebook" style="facebookSocialLogo"></my:SocialButton>
			</div>
		</div>
	</g:HTMLPanel>
</ui:UiBinder>
