<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:w='urn:import:com.fave100.client.widgets'
			 xmlns:pf="urn:import:com.fave100.client.pagefragments.footer">
             
    <ui:style src="../../../client/resources/css/global.css" type="com.fave100.client.pagefragments.playlist.PlaylistView.PlaylistStyle">
    	.container {
			position: absolute;
			right: -400px;
			bottom: 15px;
			width: 356px;	
			background-color: MAIN_BACKGROUND;
			transition: width RESIZE_TRANSITION_TIME, right RESIZE_TRANSITION_TIME;
			-webkit-transition: width RESIZE_TRANSITION_TIME, right RESIZE_TRANSITION_TIME;
			overflow-y: hidden;
		}
		
		.playlistVisible .container {
			right: 25px;
			overflow-y: auto;
		}
		
		.playlistVisible.smallDisplay .container {
			right: -400px;
		}
		
		.fullScreen.container, .playlistVisible.smallDisplay .fullScreen.container {
			width: 100%;
			right: 0;
			top: 75px;
			bottom: auto;
			overflow-y: auto;
		}
		
		.playlist {
			overflow: hidden;
		}
		
		.fullScreen .hideButton {
			display: none;
		}
		
		.songDetailsContainer {
			background-color: #1a1a1a;
			padding-bottom: 10px;
			border-radius: 4px;
		}
		
		.songDetails {
			padding: 7px;	
			overflow: hidden;
			text-overflow: ellipsis;
		}
		
		.songName, .artistName {
			font-size: 18px;
			padding: 3px;
			margin-left: 7px;
			white-space: nowrap;
		}
		
		.songName {
			color: rgb(234, 191, 77);			
		}
		
		.artistName {
			color: #fff;
			display: inline-block;
		}
		
		.playlistItems {
			overflow-y: auto;
		}
		
		.playlistControls {			
			text-align: center;
			font-size: 17px;
			width: 100%;
			padding: 4px 0;
			color: #fff;
			@mixin flexbox();
			@mixin justify-content(space-between);
			@mixin align-items(center);
		}
		
		.playlistControls a {
			color: #fff;
		}
		
		.playlistControls > * {
			padding: 7px;
		}
		
		.playlistControls > *:hover {
			cursor: pointer;
		}
		
		.playlistControls > .disabled {
			color: #999;
		}
		
		.previousButton {
			text-align: left;
		}
		
		.hideButton {
			cursor: pointer;
			margin-left: 10px;
			color: hsl(2, 70%, 60%);
		}
		
		.hyphen {
			margin: 0px 5px;
		}
				
		.addSongButton {
			display: block;
			width: 90%;
			height: 33px;
			margin: 0 auto 5px;
			background-color: #555;
		}
		
		/* July 7 2014, middle of redesign, taking out for now */
		.hideWhylinesTemp {
			display: none;
		}
    </ui:style>
    
    <g:HTMLPanel ui:field="container" ui:styleName="{style.container}">
    
	    <g:HTMLPanel ui:field="playlist" ui:styleName="{style.playlist}">
    		
		    <g:FlowPanel>
		    	<g:FlowPanel ui:styleName="{style.songDetailsContainer}">
		    		<g:FlowPanel ui:field="playlistControls" ui:styleName="{style.playlistControls}">
			    		<w:Icon ui:field="previousButton" ui:styleName="fa fa-lg  fa-backward {style.previousButton}"/>
			    		<g:FlowPanel>
				    		<g:FlowPanel>
					    		<g:InlineHyperlink ui:field="listName"/>
						    	<g:InlineLabel ui:field="byUserText" ui:styleName="{style.hyphen}">by</g:InlineLabel>
						    	<g:InlineHyperlink ui:field="username"/>
					    	</g:FlowPanel>
				    	</g:FlowPanel>
				    	<g:FlowPanel>
				    		<w:Icon ui:field="nextButton" ui:styleName="fa fa-lg fa-forward"/>    	
			    			<w:Icon ui:field="hideButton" ui:styleName="fa fa-lg fa-times {style.hideButton}"/>
		    			</g:FlowPanel>
			    	</g:FlowPanel>
	    				    
		    		<g:FlowPanel ui:styleName="{style.songDetails}">
			    		<g:InlineLabel ui:field="songName" ui:styleName="{style.songName}" />
			    		<g:InlineLabel ui:field="artistName" ui:styleName="{style.artistName}"/>
		    		</g:FlowPanel>
		    				
			    	<g:HTMLPanel ui:field="youtubePlayer"/>	
		    		    	        		
	    			<g:Button ui:field="addSongButton" ui:styleName="{style.addSongButton}">Add To List</g:Button>
		    	</g:FlowPanel>
				    	
		    	<g:FlowPanel ui:field="playlistItemsPanel" ui:styleName="{style.playlistItems}"/>
		    	
		    	<g:HTMLPanel ui:field="whylineView" ui:styleName="{style.hideWhylinesTemp}"/>
		    </g:FlowPanel>
		
		</g:HTMLPanel>
		
	</g:HTMLPanel>
    
</ui:UiBinder>
