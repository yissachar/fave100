<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:w='urn:import:com.fave100.client.widgets'>
             
    <ui:style src="../../../client/resources/css/global.css" type="com.fave100.client.pagefragments.unifiedsearch.UnifiedSearchView.UnifiedSearchStyle">
    	@def SEARCH_WIDTH 375px;
    		
		.currentSearchTypeContainer {
			float: left;
			border: 1px solid #444;
			border-right: 0;
			background-color: #fff;
			cursor: pointer;
		}
		
		.currentSearchTypeContainer i {
			float: right;
		}
		
		.currentSearchTypeSelector {
			background-color: #FFEECE;
			padding: 3px;
			font-size: 15px;
			height: 20px;
			line-height: 12px;
			margin-left: 2px;
			margin-top: 2px;
			border-radius: 1px;			
		}
		
		.searchContainer {
			width: SEARCH_WIDTH;
			height: 30px;
			background-color: #fff;
			border-radius: 15px;
			border: 1px solid #000;
			padding: 0 10px;
		}
		
		.currentSearchType {
			font-size: 12px;
			background-color: #f0f0f0;
			border: 1px solid #cacaca;
			padding: 3px;
			border-radius: 3px;
			display: inline-block;
		}
		
		.removeSearchTypeButton {
			cursor: pointer;
			margin-left: 3px;
		}
		
    	.searchBox {
			background: none !important;			
			border: 0px solid #000 !important;
			padding: 0 0 !important;
			margin-left: 5px;
			width: 75%;
    	}
    	
    	.searchIndicator {
			float: right;
			margin-top: 4px;
    	}
    	
    	.searchLoadingIndicator {
			float: right;
			margin-top: 6px;
    	}
    	
    	.smallDisplay .searchBox {
			width: 200px;
    	}
    	
    	.currentSearchTypeContainer, .searchBox {			
			height: 26px;
    	}
    	
    	.dropDownContainer {
			position: relative;
			clear: both;
    	}
    	
		.listDropdown {
			position: absolute;
			border: 1px solid #444;
			border-top: 0;
			background-color: #fff;
		}
		
		.listDropdown > * {
			padding: 6px;
			cursor: default;
		}
		
		.listDropdown > *:hover {
			background-color: PRIMARY_COLOR;
			color: HIGHLIGHT_COLOR;
		}
		
		.currentSearchTypeContainer, .listDropdown {
			width: 115px;
		}
		
		.searchResults {
			position: absolute;
			border: 1px solid #999;
			background-color: #fff;
			cursor: pointer;
			width: SEARCH_WIDTH;
			margin-top: 5px;
			border-radius: 5px;
			box-shadow: 0 0 7px 0 #999;
		}
		
		.smallDisplay .searchResults {
			width: 275px;
		}
		    	
    	.searchSuggestionsContainer:empty {
			border-bottom: 0;
    	}
		
		.searchSuggestionsContainer > * {
			padding: 8px;
		}
		
		.searchSuggestionsContainer .selected {
			background-color: FADED_LIGHT_BG;
			color: LIST_HIGHLIGHT_COLOR;
		}
		
		.searchSuggestionsContainer .song {
			font-size: 16px;
		}
		
		.searchSuggestionsContainer .artist {
			font-size: 14px;
			font-style: italic;
		}
		
		.buttonContainer {
			width: 100%;
		}
		
		.buttonContainer > * {
			color: #fff;
			background-color: PRIMARY_COLOR;
			width: 50px;
			text-align: center;
		}
		
		.buttonContainer .disabled {
			color: #eee;
			background-color: #888;
		}
		
		.previousButton {
			float: left;
		}
		
		.nextButton {
			float: right;
		}
    </ui:style>
    
	<ui:with field="img" type="com.fave100.client.resources.img.ImageResources" />
    
    <g:HTMLPanel>
		
		<g:FlowPanel ui:styleName="{style.searchContainer}">
			<g:FlowPanel ui:field="currentSearchTypeContainer" ui:styleName="{style.currentSearchType}">
				<g:InlineLabel ui:field="currentSearchType">Songs</g:InlineLabel>
				<w:Icon ui:field="removeSearchTypeButton" ui:styleName="fa fa-times {style.removeSearchTypeButton}" />
			</g:FlowPanel>
    		<w:FaveTextBox ui:field="searchBox" ui:styleName="{style.searchBox}" />
			<w:Icon ui:field="searchIndicator" ui:styleName="fa fa-search {style.searchIndicator}" />
			<g:SimplePanel ui:field="searchLoadingIndicator" ui:styleName="{style.searchLoadingIndicator}">
				<g:Image resource="{img.searchLoadingIndicator}"></g:Image>
			</g:SimplePanel>
    	</g:FlowPanel>
    	
    	<g:FlowPanel ui:styleName="{style.dropDownContainer}">
			
			<g:FlowPanel ui:field="searchResults" ui:styleName="{style.searchResults}">
				<g:FlowPanel ui:field="searchSuggestionsContainer" ui:styleName="{style.searchSuggestionsContainer}"/>
				<g:FlowPanel ui:field="buttonContainer" ui:styleName="{style.buttonContainer}">
					<w:Icon ui:field="previousButton" ui:styleName="fa fa-2x fa-caret-left {style.previousButton}" />
					<w:Icon ui:field="nextButton" ui:styleName="fa fa-2x fa-caret-right {style.nextButton}" />
				</g:FlowPanel>
			</g:FlowPanel>
			
		</g:FlowPanel>
    	
    </g:HTMLPanel>
</ui:UiBinder>
