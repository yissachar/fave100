<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:w='urn:import:com.fave100.client.widgets'>
             
    <ui:style src="../../../client/resources/css/global.css" type="com.fave100.client.pagefragments.unifiedsearch.UnifiedSearchView.UnifiedSearchStyle">
    	@def SEARCH_WIDTH 400px;
    	@def ARROW_SIZE 7px;    	 
		
		.searchContainer {
			width: SEARCH_WIDTH;
			height: 31px;
			border-bottom: 2px solid #fff;
			padding: 0 6px;
			color: #fff;
			@mixin flexbox();
			@mixin align-items(center);
			@mixin justify-content(space-between);
		}
		    	
    	.smallDisplay .searchContainer {
			border: LIGHT_BORDER;
			width: 270px;
		}
    	
		.currentSearchTypeContainer:focus {
			outline: none;
		}
    	
		.currentSearchType {
			font-size: 12px;
			cursor: pointer;
			display: inline-block;
			@mixin unselectable();
		}
		
		.currentSearchType > *:last-child {
			margin-left: 7px;
		}
				
    	.searchBox {
			background: none !important;			
			border: 0px solid #000 !important;
			padding: 0 0 !important;
			margin-left: 5px;
			width: 72%;
			color: #fff;
    	}
    	
    	.searchBox:focus {
			outline: none;
    	}
    	
    	.smallDisplay .searchBox {
			width: 65%;
    	}
    	    	    	
    	.searchTypeSelector {
			position: absolute;
			top: 28px;
			background-color: #fff;
			border-radius: 3px;
			border: 1px solid #ccc;
			cursor: pointer;
		}
		
		.searchTypeSelector:after, .searchTypeSelector:before {
			position: absolute;
			bottom: 100%;
			border: solid transparent;
			content: " ";
			height: 0;
			width: 0;
			left: 50%;
			pointer-events: none;
		}
		
		.searchTypeSelector:after {
			border-color: transparent;
			border-bottom-color: #fff;
			border-width: ARROW_SIZE;
			margin-left: sub(0px, ARROW_SIZE);
		}
		
		.searchTypeSelector:before {
			border-color: transparent;
			border-width: add(ARROW_SIZE, 2px);
			margin-left: sub(0px, add(ARROW_SIZE, 2px));
		}
		
		.searchTypeSelector > div {
			padding: 6px;
			font-size: 14px;
		}
		
		.searchTypeSelector > div:hover {			
			background-color: FADED_LIGHT_BG;
			color: LIST_HIGHLIGHT_COLOR;
		}		
		
		.searchResults {
			position: absolute;
			border: 1px solid #ccc;
			background-color: #fff;
			cursor: pointer;
			width: SEARCH_WIDTH;
			margin-top: 5px;
			border-radius: 5px;
			box-shadow: 0 0 7px 0 #aaa;
		}
		
		.smallDisplay .searchResults {
			width: 275px;
		}
		
		.searchSuggestionsContainer {
			overflow-y: auto;
		}
		    	
    	.searchSuggestions:empty {
			border-bottom: 0;
    	}
		
		.searchSuggestions > * {
			padding: 8px;
		}
		
		.searchSuggestions > *:focus {
			outline: none;
		}
		
		.searchSuggestions .selected {
			background-color: FADED_LIGHT_BG;
			color: LIST_HIGHLIGHT_COLOR;
		}
		
		.searchSuggestions .song {
			font-size: 16px;
		}
		
		.searchSuggestions .artist {
			font-size: 14px;
			font-style: italic;
		}
		
		.loadMoreButton {
			padding: 5px;
			text-align: center;
			border-top: 1px solid #ddd;
		}
		
		.loadMoreIndicator {
			padding: 5px;
		}
		
		.loadMoreIndicator img {
			display: block;
			margin: 0 auto;
		}
		
		.modePanel {
			padding: 12px 5px;
			background-color: FADED_LIGHT_BG;
		}
		
		.modeOption {
			padding: 5px;		
			border: 1px solid #aaa;
		}
		
		.modeOption:hover {
			background-color: FADED_LIGHT_BG;
			color: LIST_HIGHLIGHT_COLOR;
		}
		
		.modeOption.selected {
			background-color: PRIMARY_COLOR;
			color: #fff;
		}
				
		.addModeOption {
			border-right: 0px solid #aaa;
			margin-left: 10px;
		}
		
		.helpText {
			font-size: 12px;
			margin-top: 15px;
		}
    </ui:style>
    
	<ui:with field="img" type="com.fave100.client.resources.img.ImageResources" />
    
    <g:HTMLPanel ui:field="container">
		
		<g:FlowPanel ui:styleName="{style.searchContainer}">
			<g:FocusPanel ui:field="currentSearchTypeContainer" ui:styleName="{style.currentSearchTypeContainer}">
				<g:FlowPanel ui:styleName="{style.currentSearchType}">
					<g:InlineLabel ui:field="currentSearchType" />
					<w:Icon ui:styleName="fa fa-caret-down" />
				</g:FlowPanel>
			</g:FocusPanel>
    		<w:FaveTextBox ui:field="searchBox" ui:styleName="{style.searchBox}" />
			<w:Icon ui:field="searchIndicator" ui:styleName="fa fa-search" />
			<g:Image  ui:field="searchLoadingIndicator" resource="{img.searchLoadingIndicatorWhite}" />
    	</g:FlowPanel>
    	
    	<g:FlowPanel ui:field="searchTypeSelector" ui:styleName="{style.searchTypeSelector}">
    		<g:Label ui:field="searchSongsOption">Search songs</g:Label>
    		<g:Label ui:field="searchUsersOption">Search users</g:Label>
    		<g:Label ui:field="searchListsOption">Search lists</g:Label>
    	</g:FlowPanel>
    	
		<g:FlowPanel ui:field="searchResults" ui:styleName="{style.searchResults}">
			<g:ScrollPanel ui:field="searchSuggestionsContainer" ui:styleName="{style.searchSuggestionsContainer}">
				<g:FlowPanel>
					<g:FlowPanel ui:field="searchSuggestions"  ui:styleName="{style.searchSuggestions}"/>
					<g:Label ui:field="loadedAllLabel" ui:styleName="{style.loadMoreButton}" />
					<g:SimplePanel ui:field="loadMoreLoadingIndicator" ui:styleName="{style.loadMoreIndicator}">
						<g:Image resource="{img.searchLoadingIndicatorBlack}"></g:Image>
					</g:SimplePanel>
				</g:FlowPanel>
			</g:ScrollPanel>
			
			<g:FlowPanel ui:field="modePanel" ui:styleName="{style.modePanel}">
				<g:InlineLabel>Mode:</g:InlineLabel>
				<g:InlineLabel ui:field="addModeOption" ui:styleName="{style.modeOption} {style.addModeOption}">Add</g:InlineLabel>
				<g:InlineLabel ui:field="browseModeOption" ui:styleName="{style.modeOption} {style.selected}">Browse</g:InlineLabel>
				<g:Label ui:field="helpText" ui:styleName="{style.helpText}" />
			</g:FlowPanel>
		</g:FlowPanel>				
    	
    </g:HTMLPanel>
</ui:UiBinder>
