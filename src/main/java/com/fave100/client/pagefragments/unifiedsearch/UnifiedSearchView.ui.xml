<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:w='urn:import:com.fave100.client.widgets'>
             
    <ui:style src="../../../client/resources/css/global.css" type="com.fave100.client.pagefragments.unifiedsearch.UnifiedSearchView.UnifiedSearchStyle">
    	@def SEARCH_WIDTH 375px;
    	    	
		.currentSearchTypeContainer {
			float: left;
			border: 1px solid #444;
			border-right: 0;
			background-color: #fff;
			cursor: pointer;
		}
		
		.currentSearchTypeContainer i {
			float: right;
		}
		
		.searchContainer {
			width: SEARCH_WIDTH;
			height: 31px;
			border-bottom: 2px solid #fff;
			padding: 0 6px;
			color: #fff;
			@mixin flexbox();
			@mixin align-items(center);
			@mixin justify-content(space-between);
		}
		    	
    	.smallDisplay .searchContainer {
			border: LIGHT_BORDER;
		}
    	
		.currentSearchType {
			font-size: 12px;
			background-color: #f8f8f8;
			border: 1px solid #ccc;
			padding: 3px 5px;
			border-radius: 5px;
			display: inline-block;
		}
		
		.currentSearchType:hover {
			border-color: #aaa;
		}
		
		.removeSearchTypeButton {
			cursor: pointer;
			margin-left: 5px;
			color: #777;
		}
		
		.removeSearchTypeButton:hover {
			color: #444;
		}
		
    	.searchBox {
			background: none !important;			
			border: 0px solid #000 !important;
			padding: 0 0 !important;
			margin-left: 5px;
			width: 75%;
			color: #fff;
    	}
    	
    	.searchBox:focus {
			outline: none;
    	}
    	
    	.smallDisplay .searchBox {
			width: 65%;
    	}
    	
    	.smallDisplay .searchContainer {
			width: 270px;
    	}
    	
    	.currentSearchTypeContainer, .searchBox {			
			height: 26px;
    	}
    	
    	.dropDownContainer {
			position: relative;
			clear: both;
    	}
    	
		.listDropdown {
			position: absolute;
			border: 1px solid #444;
			border-top: 0;
			background-color: #fff;
		}
		
		.listDropdown > * {
			padding: 6px;
			cursor: default;
		}
		
		.listDropdown > *:hover {
			background-color: PRIMARY_COLOR;
			color: HIGHLIGHT_COLOR;
		}
		
		.currentSearchTypeContainer, .listDropdown {
			width: 115px;
		}
		
		.searchResults {
			position: absolute;
			border: 1px solid #999;
			background-color: #fff;
			cursor: pointer;
			width: SEARCH_WIDTH;
			margin-top: 5px;
			border-radius: 5px;
			box-shadow: 0 0 7px 0 #999;
		}
		
		.smallDisplay .searchResults {
			width: 275px;
		}
		
		.searchSuggestionsContainer {
			overflow-y: auto;
		}
		    	
    	.searchSuggestions:empty {
			border-bottom: 0;
    	}
		
		.searchSuggestions > * {
			padding: 8px;
		}
		
		.searchSuggestions > *:focus {
			outline: none;
		}
		
		.searchSuggestions .selected {
			background-color: FADED_LIGHT_BG;
			color: LIST_HIGHLIGHT_COLOR;
		}
		
		.searchSuggestions .song {
			font-size: 16px;
		}
		
		.searchSuggestions .artist {
			font-size: 14px;
			font-style: italic;
		}
		
		.loadMoreButton {
			padding: 5px;
			text-align: center;
			border-top: 1px solid #ddd;
		}
		
		.loadMoreIndicator {
			padding: 5px;
		}
		
		.loadMoreIndicator img {
			display: block;
			margin: 0 auto;
		}
		
		.modePanel {
			padding: 12px 5px;
			background-color: FADED_LIGHT_BG;
		}
		
		.modeOption {
			padding: 5px;		
			border: 1px solid #aaa;
		}
		
		.modeOption:hover {
			background-color: FADED_LIGHT_BG;
			color: LIST_HIGHLIGHT_COLOR;
		}
		
		.modeOption.selected {
			background-color: PRIMARY_COLOR;
			color: #fff;
		}
				
		.addModeOption {
			border-right: 0px solid #aaa;
			margin-left: 10px;
		}
		
		.helpText {
			font-size: 12px;
			margin-top: 15px;
		}
		
		.buttonContainer {
			width: 100%;
		}
		
		.buttonContainer > * {
			color: #fff;
			background-color: PRIMARY_COLOR;
			width: 50px;
			text-align: center;
		}
		
		.buttonContainer .disabled {
			color: #eee;
			background-color: #888;
		}
		
		.previousButton {
			float: left;
		}
		
		.nextButton {
			float: right;
		}
    </ui:style>
    
	<ui:with field="img" type="com.fave100.client.resources.img.ImageResources" />
    
    <g:HTMLPanel ui:field="container">
		
		<g:FlowPanel ui:field="searchContainer" ui:styleName="{style.searchContainer}">
			<g:FlowPanel ui:field="currentSearchTypeContainer" ui:styleName="{style.currentSearchType}">
				<g:InlineLabel ui:field="currentSearchType" />
				<w:Icon ui:field="removeSearchTypeButton" ui:styleName="fa fa-times {style.removeSearchTypeButton}" />
			</g:FlowPanel>
    		<w:FaveTextBox ui:field="searchBox" ui:styleName="{style.searchBox}" />
			<w:Icon ui:field="searchIndicator" ui:styleName="fa fa-search" />
			<g:SimplePanel ui:field="searchLoadingIndicator">
				<g:Image resource="{img.searchLoadingIndicator}"></g:Image>
			</g:SimplePanel>
    	</g:FlowPanel>
    	
    	<g:FlowPanel ui:styleName="{style.dropDownContainer}">
			
			<g:FlowPanel ui:field="searchResults" ui:styleName="{style.searchResults}">
				<g:ScrollPanel ui:field="searchSuggestionsContainer" ui:styleName="{style.searchSuggestionsContainer}">
					<g:FlowPanel>
						<g:FlowPanel ui:field="searchSuggestions"  ui:styleName="{style.searchSuggestions}"/>
						<g:Label ui:field="loadedAllLabel" ui:styleName="{style.loadMoreButton}" />
						<g:SimplePanel ui:field="loadMoreLoadingIndicator" ui:styleName="{style.loadMoreIndicator}">
							<g:Image resource="{img.searchLoadingIndicator}"></g:Image>
						</g:SimplePanel>
					</g:FlowPanel>
				</g:ScrollPanel>
				
				<g:FlowPanel ui:field="modePanel" ui:styleName="{style.modePanel}">
					<g:InlineLabel>Mode:</g:InlineLabel>
					<g:InlineLabel ui:field="addModeOption" ui:styleName="{style.modeOption} {style.addModeOption}">Add</g:InlineLabel>
					<g:InlineLabel ui:field="browseModeOption" ui:styleName="{style.modeOption} {style.selected}">Browse</g:InlineLabel>
					<g:Label ui:field="helpText" ui:styleName="{style.helpText}" />
				</g:FlowPanel>
			</g:FlowPanel>
			
		</g:FlowPanel>		
    	
    </g:HTMLPanel>
</ui:UiBinder>
